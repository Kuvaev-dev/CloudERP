@model IEnumerable<DatabaseAccess.tblSaleCartDetail>

@{
    ViewBag.Title = Resources.SaleCart.NewSale.ToString();
    var products = ViewBag.Products as List<DatabaseAccess.tblStock>;
}

<!-- Tables Sorting-->
<link href="https://cdn.datatables.net/1.11.6/css/jquery.dataTables.min.css" rel="stylesheet" />
<script src="~/Scripts/jquery-3.7.1.js"></script>
<script src="https://cdn.datatables.net/1.11.6/js/jquery.dataTables.min.js"></script>

<style>
    #dataTable_filter input[type="search"] {
        width: 15rem;
    }
</style>

@using (Html.BeginForm("AddItem", "SaleCart", FormMethod.Post, null))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            <label class="control-label col-md-2">@Html.Raw(HttpUtility.HtmlDecode(Resources.SaleCart.SelectProduct))</label>
            <div class="col-md-5">
                <select class="form-control" id="PID" name="PID" required>
                    <option value="">Select Product</option>
                    @foreach (var product in products)
                    {
                        <option value="@product.ProductID">@product.ProductName</option>
                    }
                </select>
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">@Html.Raw(HttpUtility.HtmlDecode(Resources.SaleCart.Quantity))</label>
            <div class="col-md-5">
                <input type="number" class="form-control" id="Qty" name="Qty" required />
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">@Html.Raw(HttpUtility.HtmlDecode(Resources.SaleCart.UnitPrice))</label>
            <div class="col-md-5">
                <input type="number" class="form-control" id="Price" step=".01" name="Price" required />
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">@Html.Raw(HttpUtility.HtmlDecode(Resources.SaleCart.ItemCost))</label>
            <div class="col-md-5">
                <input type="text" readonly class="form-control" id="selectItemCost" name="selectItemCost" />
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="@Resources.SaleCart.AddItem.ToString()" class="btn btn-success" />
            </div>
        </div>
    </div>
}

<div class="card card-default col-md-12">
    <div class="card-header">
        <h3 class="text-bold">@Html.Raw(HttpUtility.HtmlDecode(Resources.SaleCart.SaleItemsList))</h3>
        <h4 class="text-success">
            @{if (ViewBag.Message != null)
                {
                    @ViewBag.Message;
                }
                else
                {
                    @Session["ErrorMessageSale"];
                } }
        </h4>
    </div>
    <div class="card-body">
        <div class="table-responsive bootgrid">
            <table class="table table-striped table-hover" id="dataTable">
                <thead style="background-color:lightgray;">
                    <tr>
                        <th>
                            @Html.Raw(HttpUtility.HtmlDecode(Resources.SaleCart.Items))
                        </th>
                        <th>
                            @Html.Raw(HttpUtility.HtmlDecode(Resources.SaleCart.Quantity))
                        </th>
                        <th>
                            @Html.Raw(HttpUtility.HtmlDecode(Resources.SaleCart.UnitPrice))
                        </th>
                        <th>
                            @Html.Raw(HttpUtility.HtmlDecode(Resources.SaleCart.ItemCost))
                        </th>
                        <th>
                            @Html.Raw(HttpUtility.HtmlDecode(Resources.SaleCart.User))
                        </th>
                        <th>
                            @Html.Raw(HttpUtility.HtmlDecode(Resources.Repeats.Delete))
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.tblStock.ProductName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.SaleQuantity)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.SaleUnitPrice)
                            </td>
                            <td>
                                @(string.Format("{0:0.000}", Math.Truncate(item.SaleQuantity * item.SaleUnitPrice * 10) / 10))
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.tblUser.UserName)
                            </td>
                            <td>
                                @Html.ActionLink(Resources.Repeats.Delete.ToString(), "DeleteConfirm", new { id = item.SaleCartDetailID }, new { @class = "btn btn-danger" })
                            </td>
                        </tr>
                    }
                </tbody>
                <tfoot>
                    <tr>
                        <td></td>
                        <td></td>
                        <td></td>
                        <td style="background-color:black; color:white;">@Html.Raw(HttpUtility.HtmlDecode(Resources.SaleCart.TotalSaleAmount))</td>
                        <td style="background-color:black; color:white;">
                            @(string.Format("{0:0.000}", Math.Truncate(ViewBag.TotalAmount * 10) / 10)) UAH
                        </td>
                    </tr>
                </tfoot>
            </table>
            <div style="float:right; margin-top:20px;">
                @Html.ActionLink(Resources.SaleCart.Next.ToString(), "SelectCustomer", null, new { @class = "btn btn-success", style = "padding:20px;" })
                @Html.ActionLink(Resources.SaleCart.Cancel.ToString(), "CancelSale", null, new { @class = "btn btn-danger", style = "padding:20px;" })
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
    $(document).ready(function () {
        $('#dataTable').DataTable({
            "columnDefs": [{ "orderable": false, "targets": 5 }],
            "lengthMenu": [[5, 10, 25, 50, 75, 100, 150, 200, -1], [5, 10, 25, 50, 75, 100, 150, 200, "All"]],
        });

        $("#PID").change(function () {
            $("#Price").val("0");
            $.ajax({
                url: '@Url.Action("GetProductDetails", "SaleCart")',
                type: 'GET',
                data: { id: $(this).val() },
                dataType: 'Json',
                success: function (response) {
                    $('#Price').val(response.data);
                },
                error: function () {
                    $('#Price').val("0");
                }
            });
        });

        $("#Qty, #Price").on("input", function () {
            var unitPrice = parseFloat($("#Price").val()) || 0;
            var qty = parseFloat($("#Qty").val()) || 0;
            $("#selectItemCost").val((unitPrice * qty).toFixed(2));
        });
    });
</script>