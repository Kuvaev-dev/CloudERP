@model IEnumerable<Domain.Models.SaleCartDetail>
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor

@{
    ViewBag.Title = Localization.CloudERP.Sale.NewSale;
    var products = ViewBag.Products as IEnumerable<Domain.Models.Stock>;
}

<!-- Tables Sorting-->
<script src="https://code.jquery.com/jquery-3.7.0.min.js"></script>
<link href="https://cdn.datatables.net/v/bs5/dt-2.2.2/datatables.min.css" rel="stylesheet">
<script src="https://cdn.datatables.net/v/bs5/dt-2.2.2/datatables.min.js"></script>

<style>
    #dataTable_filter input[type="search"] {
        width: 15rem;
    }
</style>

@using (Html.BeginForm("AddItem", "SaleCart", FormMethod.Post, null))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h3 class="text-danger">@ViewBag.ErrorMessage</h3>

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            <label class="control-label col-md-2">@Html.Raw(Localization.CloudERP.Sale.SelectProduct)</label>
            <div class="col-md-5">
                <select class="form-control" id="PID" name="PID" required>
                    <option value="">@Localization.CloudERP.Sale.SelectProduct</option>
                    @foreach (var product in products)
                    {
                        <option value="@product.ProductID">@product.ProductName (QTY: @product.Quantity)</option>
                    }
                </select>
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">@Html.Raw(Localization.CloudERP.Sale.Quantity)</label>
            <div class="col-md-5">
                <input type="number" class="form-control" id="Qty" name="Qty" required />
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">@Html.Raw(Localization.CloudERP.Sale.UnitPrice)</label>
            <div class="col-md-5">
                <input type="number" class="form-control" id="Price" step=".01" name="Price" required />
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">@Html.Raw(Localization.CloudERP.Sale.ItemCost)</label>
            <div class="col-md-5">
                <input type="text" readonly class="form-control" id="selectItemCost" name="selectItemCost" />
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="@Localization.CloudERP.Sale.AddItem" class="btn btn-success" />
            </div>
        </div>
    </div>
}

<div class="card card-default col-md-12">
    <div class="card-header">
        <h3 class="text-bold">@Html.Raw(Localization.CloudERP.Sale.SaleItemsList)</h3>
        <h4 class="text-success">
            @{if (ViewBag.Message != null)
                {
                    @ViewBag.Message;
                }
                else
                {
                    @HttpContextAccessor.HttpContext?.Session.GetString("ErrorMessageSale");
                }
            }
        </h4>
    </div>
    <div class="card-body">
        <div class="table-responsive bootgrid">
            <table class="table table-striped table-hover" id="dataTable">
                <thead style="background-color:lightgray;">
                    <tr>
                        <th>
                            @Html.Raw(Localization.CloudERP.Miscellaneous.Items)
                        </th>
                        <th>
                            @Html.Raw(Localization.CloudERP.Miscellaneous.Quantity)
                        </th>
                        <th>
                            @Html.Raw(Localization.CloudERP.Sale.UnitPrice)
                        </th>
                        <th>
                            @Html.Raw(Localization.CloudERP.Sale.ItemCost)
                        </th>
                        <th>
                            @Html.Raw(Localization.CloudERP.Sale.User)
                        </th>
                        <th>
                            @Html.Raw(Localization.CloudERP.Common.Delete)
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.ProductName)</td>
                            <td>@Html.DisplayFor(modelItem => item.SaleQuantity)</td>
                            <td>@Html.DisplayFor(modelItem => item.SaleUnitPrice)</td>
                            <td>@(string.Format("{0:0.000}", Math.Truncate(item.SaleQuantity * item.SaleUnitPrice * 10) / 10))</td>
                            <td>@Html.DisplayFor(modelItem => item.UserName)</td>
                            <td>
                                @using (Html.BeginForm("DeleteConfirm", "SaleCart", FormMethod.Post))
                                {
                                    @Html.AntiForgeryToken()
                                    @Html.Hidden("id", item.SaleCartDetailID)
                                    <input type="submit" value="@Localization.CloudERP.Common.Delete" class="btn btn-danger" />
                                }
                            </td>
                        </tr>
                    }
                </tbody>
                <tfoot>
                    <tr>
                        <td></td>
                        <td></td>
                        <td></td>
                        <td style="background-color:black; color:white;">@Html.Raw(Localization.CloudERP.Sale.TotalSaleAmount)</td>
                        <td style="background-color:black; color:white;">
                            @(string.Format("{0:0.000}", Math.Truncate(ViewBag.TotalAmount * 10) / 10)) @Localization.CloudERP.Common.UAH
                        </td>
                    </tr>
                </tfoot>
            </table>
            <div style="float:right; margin-top:20px;" class="btn-group">
                @Html.ActionLink(Localization.CloudERP.Sale.Next, "SelectCustomer", null, new { @class = "btn btn-success", style = "padding:20px;" })
                @using (Html.BeginForm("CancelSale", "SaleCart", FormMethod.Post, new { @class = "form-inline" }))
                {
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-danger" style="padding:20px;">
                        @Localization.CloudERP.Sale.Cancel
                    </button>
                }
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
    $(document).ready(function () {
        $('#dataTable').DataTable({
            "columnDefs": [{ "orderable": false, "targets": 5 }],
            "lengthMenu": [[5, 10, 25, 50, 75, 100, 150, 200, -1], [5, 10, 25, 50, 75, 100, 150, 200, "All"]],
        });

        $("#PID").change(function () {
            $("#Price").val("0");
            $.ajax({
                url: '@Url.Action("GetProductDetails", "SaleCart")',
                type: 'GET',
                data: { id: $(this).val() },
                dataType: 'Json',
                success: function (response) {
                    $('#Price').val(response.data);
                },
                error: function () {
                    $('#Price').val("0");
                }
            });
        });

        $("#Qty, #Price").on("input", function () {
            var unitPrice = parseFloat($("#Price").val()) || 0;
            var qty = parseFloat($("#Qty").val()) || 0;
            $("#selectItemCost").val((unitPrice * qty).toFixed(2));
        });
    });
</script>