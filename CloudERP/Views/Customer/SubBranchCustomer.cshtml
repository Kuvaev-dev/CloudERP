@model IEnumerable<Domain.Models.Customer>
@using Localization.CloudERP.Modules.Miscellaneous
@using Localization.CloudERP.Modules.Company
@using Localization.CloudERP.Modules.Branch
@{
    ViewBag.Title = Miscellaneous.SubBranchCustomers;
}

<!-- Tables Sorting-->
<script src="https://code.jquery.com/jquery-3.7.0.min.js"></script>
<link href="https://cdn.datatables.net/v/bs5/dt-2.2.2/datatables.min.css" rel="stylesheet">
<script src="https://cdn.datatables.net/v/bs5/dt-2.2.2/datatables.min.js"></script>

<style>
    #dataTable_filter input[type="search"] {
        width: 15rem;
    }
</style>

<div class="card card-default col-md-12">
    <div class="card-body">
        <div class="table-responsive bootgrid">
            <table class="table table-striped table-bordered table-hover" id="dataTable">
                <thead>
                    <tr>
                        <th>
                            @Html.Raw(Company.CompanyTitle)
                        </th>
                        <th>
                            @Html.Raw(Branch.BranchName)
                        </th>
                        <th>
                            @Html.Raw(Miscellaneous.CustomerName)
                        </th>
                        <th>
                            @Html.Raw(Localization.CloudERP.Modules.User.User.ContactNo)
                        </th>
                        <th>
                            @Html.Raw(Localization.CloudERP.Modules.Supplier.Supplier.Address)
                        </th>
                        <th>
                            @Html.Raw(Miscellaneous.Description)
                        </th>
                        <th>
                            @Html.Raw(Localization.CloudERP.Modules.User.User.UserName)
                        </th>
                    </tr>
                </thead>
                <tbody id="SBCustomerList">
                    @if (Model != null)
                    {
                        foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @item.CompanyName
                                </td>
                                <td>
                                    @item.BranchName
                                </td>
                                <td>
                                    @item.Customername
                                </td>
                                <td>
                                    @item.CustomerContact
                                </td>
                                <td>
                                    @item.CustomerAddress
                                </td>
                                <td>
                                    @item.Description
                                </td>
                                <td>
                                    @item.UserName
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
<script type="text/javascript">
    $(document).ready(function () {
        $('#dataTable').DataTable({
            "lengthMenu": [[5, 10, 25, 50, 75, 100, 150, 200, -1], [5, 10, 25, 50, 75, 100, 150, 200, "All"]],
        });
    });
</script>