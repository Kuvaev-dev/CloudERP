@model IEnumerable<DatabaseAccess.tblCustomer>

@{
    ViewBag.Title = "All Customers";
}

<script src="~/Scripts/jquery-3.7.1.js"></script>

<div class="card card-default col-md-12">
    <div class="card-header">
        <input class="form-control col-md-3" style="float:right;" type="text" id="searchCustomer" name="searchCustomer" placeholder="Search..." />
    </div>
    <div class="card-body">
        <div class="table-responsive bootgrid">
            <table class="table table-striped table-bordered table-hover" id="dataTable">
                <thead>
                    <tr>
                        <th>
                            Company
                        </th>
                        <th>
                            Branch
                        </th>
                        <th>
                            Customer
                        </th>
                        <th>
                            Contact №
                        </th>
                        <th>
                            Area
                        </th>
                        <th>
                            Address
                        </th>
                        <th>
                            User
                        </th>
                    </tr>
                </thead>
                <tbody id="customerList">
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.tblCompany.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.tblBranch.BranchName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Customername)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.CustomerContact)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.CustomerArea)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.CustomerAddress)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.tblUser.FullName)
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
<script type="text/javascript">
    $(document).ready(function () {
        $("#searchCustomer").on("keyup", function () {
            var value = $(this).val().toLowerCase();
            $("#customerList tr").filter(function () {
                $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
            })
        })
    })
</script>