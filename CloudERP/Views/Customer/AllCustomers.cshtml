@model IEnumerable<Domain.Models.Customer>

@{
    ViewBag.Title = Localization.CloudERP.Miscellaneous.AllCustomers;
}

<!-- Tables Sorting-->
<link href="https://cdn.datatables.net/1.11.6/css/jquery.dataTables.min.css" rel="stylesheet" />
<script src="https://cdn.datatables.net/1.11.6/js/jquery.dataTables.min.js"></script>

<style>
    #dataTable_filter input[type="search"] {
        width: 15rem;
    }
</style>

<div class="card card-default col-md-12">
    <div class="card-body">
        <div class="table-responsive bootgrid">
            <table class="table table-striped table-bordered table-hover" id="dataTable">
                <thead>
                    <tr>
                        <th>
                            @Html.Raw(Localization.CloudERP.Company.CompanyTitle)
                        </th>
                        <th>
                            @Html.Raw(Localization.CloudERP.Branch.BranchName)
                        </th>
                        <th>
                            @Html.Raw(Localization.CloudERP.Miscellaneous.CustomerName)
                        </th>
                        <th>
                            @Html.Raw(Localization.CloudERP.User.ContactNo)
                        </th>
                        <th>
                            @Html.Raw(Localization.CloudERP.User.Address)
                        </th>
                        <th>
                            @Html.Raw(Localization.CloudERP.User.FullName)
                        </th>
                    </tr>
                </thead>
                <tbody id="customerList">
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.CompanyName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.BranchName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Customername)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.CustomerContact)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.CustomerAddress)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.UserName)
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
<script type="text/javascript">
    $(document).ready(function () {
        $('#dataTable').DataTable({
            "lengthMenu": [[5, 10, 25, 50, 75, 100, 150, 200, -1], [5, 10, 25, 50, 75, 100, 150, 200, "All"]],
        });
    });
</script>