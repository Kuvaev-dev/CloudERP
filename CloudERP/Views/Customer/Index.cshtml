@model IEnumerable<DatabaseAccess.tblCustomer>

@{
    ViewBag.Title = Resources.Miscellaneous.BranchCustomers.ToString();
}

<!-- Tables Sorting-->
<link href="https://cdn.datatables.net/1.11.6/css/jquery.dataTables.min.css" rel="stylesheet" />
<script src="~/Scripts/jquery-3.7.1.js"></script>
<script src="https://cdn.datatables.net/1.11.6/js/jquery.dataTables.min.js"></script>

<style>
    #dataTable_filter input[type="search"] {
        width: 15rem;
    }
</style>

<div class="card card-default col-md-12">
    <div class="card-body">
        <div class="table-responsive bootgrid">
            <table class="table table-striped table-bordered table-hover" id="dataTable">
                <thead>
                    <tr>
                        <th>
                            @Html.Raw(HttpUtility.HtmlDecode(Resources.Miscellaneous.CompanyTitle))
                        </th>
                        <th>
                            @Html.Raw(HttpUtility.HtmlDecode(Resources.Miscellaneous.BranchTitle))
                        </th>
                        <th>
                            @Html.Raw(HttpUtility.HtmlDecode(Resources.Miscellaneous.CustomerFullName))
                        </th>
                        <th>
                            @Html.Raw(HttpUtility.HtmlDecode(Resources.Miscellaneous.ContactNo))
                        </th>
                        <th>
                            @Html.Raw(HttpUtility.HtmlDecode(Resources.Miscellaneous.Address))
                        </th>
                        <th>
                            @Html.Raw(HttpUtility.HtmlDecode(Resources.Miscellaneous.User))
                        </th>
                        <th>
                            @Html.Raw(HttpUtility.HtmlDecode(Resources.Common.Actions))
                        </th>
                    </tr>
                </thead>
                <tbody id="customerList">
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.tblCompany.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.tblBranch.BranchName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Customername)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.CustomerContact)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.CustomerAddress)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.tblUser.FullName)
                            </td>
                            <td>
                                @Html.ActionLink(Resources.Common.Update.ToString(), "Edit", new { id = item.CustomerID }, new { @class = "btn btn-primary" })
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
<script type="text/javascript">
    $(document).ready(function () {
        $('#dataTable').DataTable({
            "columnDefs": [{ "orderable": false, "targets": 7 }],
            "lengthMenu": [[5, 10, 25, 50, 75, 100, 150, 200, -1], [5, 10, 25, 50, 75, 100, 150, 200, "All"]],
        });
    });
</script>