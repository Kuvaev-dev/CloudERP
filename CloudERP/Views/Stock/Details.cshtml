@model Domain.Models.Stock

@{
    ViewBag.Title = Resources.Miscellaneous.ProductDetails.ToString();
}

<div class="form-horizontal">
    <div class="col-md-10">
        <dl class="dl-horizontal">
            <dt>
                @Html.Raw(HttpUtility.HtmlDecode(Resources.Miscellaneous.ProductName))
            </dt>

            <dd>
                @Html.DisplayFor(model => model.ProductName)
            </dd>

            <dt>
                @Html.Raw(HttpUtility.HtmlDecode(Resources.Miscellaneous.Quantity))
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Quantity)
            </dd>

            <dt>
                @Html.Raw(HttpUtility.HtmlDecode(Resources.Miscellaneous.SaleUnitPrice))
            </dt>

            <dd>
                @Html.DisplayFor(model => model.SaleUnitPrice)
            </dd>

            <dt>
                @Html.Raw(HttpUtility.HtmlDecode(Resources.Miscellaneous.CurrentPurchaseUnitPrice))
            </dt>

            <dd>
                @Html.DisplayFor(model => model.CurrentPurchaseUnitPrice)
            </dd>

            <dt>
                @Html.Raw(HttpUtility.HtmlDecode(Resources.Miscellaneous.ExpiryDate))
            </dt>

            <dd>
                @Html.DisplayFor(model => model.ExpiryDate)
            </dd>

            <dt>
                @Html.Raw(HttpUtility.HtmlDecode(Resources.Miscellaneous.ManufactureDate))
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Manufacture)
            </dd>

            <dt>
                @Html.Raw(HttpUtility.HtmlDecode(Resources.Miscellaneous.TresholdQuantity))
            </dt>

            <dd>
                @Html.DisplayFor(model => model.StockTreshHoldQuantity)
            </dd>

            <dt>
                @Html.Raw(HttpUtility.HtmlDecode(Resources.Miscellaneous.Description))
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Description)
            </dd>

            <dt>
                @Html.Raw(HttpUtility.HtmlDecode(Resources.Miscellaneous.Status))
            </dt>

            <dd>
                @Html.DisplayFor(model => model.IsActive)
            </dd>

            <dt>
                @Html.Raw(HttpUtility.HtmlDecode(Resources.Branch.BranchTitle))
            </dt>

            <dd>
                @Html.DisplayFor(model => model.tblBranch.BranchName)
            </dd>

            <dt>
                @Html.Raw(HttpUtility.HtmlDecode(Resources.Miscellaneous.CategoryName))
            </dt>

            <dd>
                @Html.DisplayFor(model => model.tblCategory.CategoryName)
            </dd>

            <dt>
                @Html.Raw(HttpUtility.HtmlDecode(Resources.Company.CompanyTitle))
            </dt>

            <dd>
                @Html.DisplayFor(model => model.tblCompany.Name)
            </dd>

            <dt>
                @Html.Raw(HttpUtility.HtmlDecode(Resources.User.FullName))
            </dt>

            <dd>
                @Html.DisplayFor(model => model.tblUser.FullName)
            </dd>

        </dl>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            @Html.ActionLink(Resources.Common.Edit.ToString(), "Edit", new { id = Model.ProductID }, new { @class = "btn btn-primary" })
            @Html.ActionLink(Resources.Common.BackToList.ToString(), "Index", null, new { @class = "btn btn-default" })
        </div>
    </div>
</div>