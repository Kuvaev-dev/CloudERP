@model Domain.Models.Stock
@using Localization.CloudERP.Modules.Miscellaneous
@using Localization.CloudERP.Modules.Sale
@using Localization.CloudERP.Modules.Branch
@using Localization.CloudERP.Modules.Company
@using Localization.CloudERP.Common
@{
    ViewBag.Title = Miscellaneous.ProductDetails;
}

<div class="form-horizontal">
    <div class="col-md-10">
        <dl class="dl-horizontal">
            <dt>
                @Html.Raw(Miscellaneous.ProductName)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.ProductName)
            </dd>

            <dt>
                @Html.Raw(Sale.Quantity)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Quantity)
            </dd>

            <dt>
                @Html.Raw(Miscellaneous.SaleUnitPrice)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.SaleUnitPrice)
            </dd>

            <dt>
                @Html.Raw(Miscellaneous.CurrentPurchaseUnitPrice)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.CurrentPurchaseUnitPrice)
            </dd>

            <dt>
                @Html.Raw(Miscellaneous.ExpiryDate)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.ExpiryDate)
            </dd>

            <dt>
                @Html.Raw(Miscellaneous.ManufactureDate)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Manufacture)
            </dd>

            <dt>
                @Html.Raw(Miscellaneous.TresholdQuantity)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.StockTreshHoldQuantity)
            </dd>

            <dt>
                @Html.Raw(Miscellaneous.Description)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Description)
            </dd>

            <dt>
                @Html.Raw(Miscellaneous.Status)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.IsActive)
            </dd>

            <dt>
                @Html.Raw(Branch.BranchName)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.BranchName)
            </dd>

            <dt>
                @Html.Raw(Miscellaneous.CategoryName)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.CategoryName)
            </dd>

            <dt>
                @Html.Raw(Company.CompanyTitle)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.CompanyName)
            </dd>

            <dt>
                @Html.Raw(Localization.CloudERP.Modules.User.User.FullName)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.UserName)
            </dd>

        </dl>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            @Html.ActionLink(Common.Edit, "Edit", new { id = Model.ProductID }, new { @class = "btn btn-primary" })
            @Html.ActionLink(Common.BackToList, "Index", null, new { @class = "btn btn-default" })
        </div>
    </div>
</div>