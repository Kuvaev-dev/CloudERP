            </dt>

            <dd>
                @Html.DisplayFor(model => model.UserName)
            </dd>

        </dl>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            @Html.ActionLink(Localization.CloudERP.Common.Edit.ToString(), "Edit", new { id = Model.ProductID }, new { @class = "btn btn-primary" })
            @Html.ActionLink(Localization.CloudERP.Common.BackToList.ToString(), "Index", null, new { @class = "btn btn-default" })
        </div>
    </div>
