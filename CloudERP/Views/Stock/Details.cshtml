@model DatabaseAccess.tblStock

@{
    ViewBag.Title = "Product Details";
}

<div class="form-horizontal">
    <div class="col-md-10">
        <dl class="dl-horizontal">
            <dt>
                Product Name
            </dt>

            <dd>
                @Html.DisplayFor(model => model.ProductName)
            </dd>

            <dt>
                Quantity
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Quantity)
            </dd>

            <dt>
                Sale Unit Price
            </dt>

            <dd>
                @Html.DisplayFor(model => model.SaleUnitPrice)
            </dd>

            <dt>
                Current Purchase Unit Price
            </dt>

            <dd>
                @Html.DisplayFor(model => model.CurrentPurchaseUnitPrice)
            </dd>

            <dt>
                Expiry Date
            </dt>

            <dd>
                @Html.DisplayFor(model => model.ExpiryDate)
            </dd>

            <dt>
                Manufacture
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Manufacture)
            </dd>

            <dt>
                Stock Tresh Hold Quantity)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.StockTreshHoldQuantity)
            </dd>

            <dt>
                Description
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Description)
            </dd>

            <dt>
                Status / Is Active
            </dt>

            <dd>
                @Html.DisplayFor(model => model.IsActive)
            </dd>

            <dt>
                Branch
            </dt>

            <dd>
                @Html.DisplayFor(model => model.tblBranch.BranchName)
            </dd>

            <dt>
                Category
            </dt>

            <dd>
                @Html.DisplayFor(model => model.tblCategory.CategoryName)
            </dd>

            <dt>
                Company
            </dt>

            <dd>
                @Html.DisplayFor(model => model.tblCompany.Name)
            </dd>

            <dt>
                Full Name
            </dt>

            <dd>
                @Html.DisplayFor(model => model.tblUser.FullName)
            </dd>

        </dl>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            @Html.ActionLink("Edit", "Edit", new { id = Model.ProductID }, new { @class = "btn btn-primary" })
            @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-default" })
        </div>
    </div>
</div>