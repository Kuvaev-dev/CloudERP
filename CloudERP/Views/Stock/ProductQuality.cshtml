@model IEnumerable<Domain.Models.ProductQuality>
@using Localization.CloudERP.Modules.Miscellaneous
@{
    ViewBag.Title = Miscellaneous.ProductQualityList;
}

<!-- Tables Sorting-->
<script src="https://code.jquery.com/jquery-3.7.0.min.js"></script>

<style>
    #dataTable_filter input[type="search"] {
        width: 15rem;
    }
</style>

<div class="card card-default col-md-12">
    <div class="card-body">
        <div class="table-responsive bootgrid">
            <table class="table table-striped table-bordered table-hover" id="dataTable">
                <thead>
                    <tr>
                        <th class="col-md-2">@Miscellaneous.ProductID</th>
                        <th>@Miscellaneous.ProductName</th>
                        <th>@Miscellaneous.Quality</th>
                    </tr>
                </thead>
                <tbody id="productList">
                    @foreach (var product in Model)
                    {
                        <tr>
                            <td>@product.ProductID</td>
                            <td>@product.ProductName</td>
                            <td>@product.EvaluateQuality()</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
<script type="text/javascript">
    $(document).ready(function () {
        $('#dataTable').DataTable({
            layout: {
                topStart: {
                    buttons: [
                        { extend: 'copy', className: 'btn btn-secondary', exportOptions: { columns: [0] } },
                        { extend: 'csv', className: 'btn btn-secondary', exportOptions: { columns: [0] } },
                        { extend: 'excel', className: 'btn btn-secondary', exportOptions: { columns: [0] } },
                        { extend: 'pdf', className: 'btn btn-secondary', exportOptions: { columns: [0] } },
                        { extend: 'print', className: 'btn btn-secondary', exportOptions: { columns: [0] } }
                    ]
                },
                topEnd: 'search',
                bottomStart: 'info',
                bottomEnd: 'paging',
                top2Start: 'pageLength'
            },
            lengthMenu: [[5, 10, 25, 50, 75, 100, 150, 200, -1], [5, 10, 25, 50, 75, 100, 150, 200, "*"]],
        });
    });
</script>