@model IEnumerable<Domain.Models.FinancialModels.TrialBalanceModel>

@{
    ViewBag.Title = Localization.CloudERP.Miscellaneous.TrialBalance;
}

<!-- Tables Sorting-->
<script src="https://code.jquery.com/jquery-3.7.0.min.js"></script>
<link href="https://cdn.datatables.net/v/bs5/dt-2.2.2/datatables.min.css" rel="stylesheet">
<script src="https://cdn.datatables.net/v/bs5/dt-2.2.2/datatables.min.js"></script>

<style>
    #dataTable_filter input[type="search"] {
        width: 15rem;
    }
</style>

@using (Html.BeginForm("GetTrialBalance", "TrialBalance", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <div class="card">
        <div class="card card-float">
            <div class="card-body">
                <div class="row">
                    <div class="col-md-4">
                        <label>@Localization.CloudERP.Financial.SelectFinancialYear</label>
                        @Html.DropDownList("id", (SelectList)ViewBag.FinancialYears, Localization.CloudERP.Financial.SelectFinancialYear, new { @class = "form-control", required = "required" })
                        <input type="submit" value="@Localization.CloudERP.Miscellaneous.GetTrialBalance" class="btn btn-success form-control mt-2">
                    </div>
                    <div class="col-md-4">
                        <h3 class="text-danger">@ViewBag.Message</h3>
                        <h3 class="text-danger">@ViewBag.ErrorMessage</h3>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

<div class="card">
    <div class="card-header">
        <div class="card-title">@Localization.CloudERP.Miscellaneous.Export</div>
    </div>
    <div class="card-body">
        <table class="table my-4 w-100" id="dataTable">
            <thead>
                <tr>
                    <th>
                        @Localization.CloudERP.Financial.AccountTitle
                    </th>
                    <th>
                        @Localization.CloudERP.Miscellaneous.Debit
                    </th>
                    <th>
                        @Localization.CloudERP.Miscellaneous.Credit
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.AccountSubControl)
                        </td>
                        <td>
                            @if (item.Debit == 0)
                            {
                                <p style="background-color:white;color:white;text-align:center;">
                                    @Html.DisplayFor(modelItem => item.Debit)
                                </p>
                            }
                            else
                            {
                                @Html.DisplayFor(modelItem => item.Debit)
                            }
                        </td>
                        <td>
                            @if (item.Credit == 0)
                            {
                                <p style="background-color:white;color:white;text-align:center;">
                                    @Html.DisplayFor(modelItem => item.Credit)
                                </p>
                            }
                            else
                            {
                                @Html.DisplayFor(modelItem => item.Credit)
                            }
                        </td>
                    </tr>
                }
            </tbody>
            <tfoot>
                @foreach (var item in Model)
                {
                    if (item.AccountSubControl == "Total")
                    {
                        <tr style="background-color:aliceblue;">
                            <td>
                                <b>@Html.DisplayFor(modelItem => item.AccountSubControl)</b>
                            </td>
                            <td>
                                <b>@Html.DisplayFor(modelItem => item.Debit)</b>
                            </td>
                            <td>
                                <b>@Html.DisplayFor(modelItem => item.Credit)</b>
                            </td>
                        </tr>
                    }
                }
            </tfoot>
        </table>
    </div>
</div>
<script type="text/javascript">
    $(document).ready(function () {
        $('#dataTable').DataTable({
            "columnDefs": [{ "orderable": false, "targets": 3 }],
            "lengthMenu": [[5, 10, 25, 50, 75, 100, 150, 200, -1], [5, 10, 25, 50, 75, 100, 150, 200, "All"]],
        });
    });
</script>
