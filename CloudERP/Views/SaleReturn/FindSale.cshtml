@model Domain.Models.CustomerInvoice
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor

@{
    ViewBag.Title = Localization.CloudERP.Sale.SearchSaleByInvoiceNo;
}

@using (Html.BeginForm("FindSale", "SaleReturn", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h3 class="text-danger">@ViewBag.Message</h3>
        <h3 class="text-danger">@ViewBag.ErrorMessage</h3>

        <div class="form-group">
            <label for="invoiceID" class="control-label col-md-4">@Localization.CloudERP.Sale.EnterSaleInvoice №</label>
            <div class="col-md-5">
                <input type="text" class="form-control" id="invoiceID" name="invoiceID" placeholder="Enter Sale Invoice..." required />
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Find Sale" class="btn btn-success" />
            </div>
        </div>
    </div>
 }

@if (Model != null && Model.InvoiceNo != null)
{
    using (Html.BeginForm("ReturnConfirm", "SaleReturn", FormMethod.Post))
    {
        @Html.AntiForgeryToken()

        <input type="hidden" name="CustomerInvoiceID" value="@Model.CustomerInvoiceID" />

        <div class="card mt-4">
            <div class="card-header">
                <h3>@Localization.CloudERP.Sale.Invoice №: @Model.InvoiceNo</h3>
                <h3 class="text-danger">@HttpContextAccessor.HttpContext?.Session.GetString("SaleReturnMessage")</h3>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <h4>@Localization.CloudERP.Sale.Company:</h4>
                        <p>@Model.CompanyName - @Model.BranchName</p>
                        <p>@Localization.CloudERP.User.Address: @Model.BranchAddress</p>
                        <p>@Localization.CloudERP.User.ContactNo: @Model.BranchContact</p>
                    </div>
                    <div class="col-md-6">
                        <h4>@Localization.CloudERP.Sale.Customer:</h4>
                        <p>@Model.Customername</p>
                        <p>@Model.CustomerAddress</p>
                        <p>@Model.CustomerContact</p>
                    </div>
                </div>

                <table class="table table-bordered mt-4">
                    <thead>
                        <tr>
                            <th>@Localization.CloudERP.Sale.Product</th>
                            <th>@Localization.CloudERP.Sale.SaleQty</th>
                            <th>@Localization.CloudERP.Sale.ReturnQty</th>
                            <th>@Localization.CloudERP.Sale.UnitPrice</th>
                            <th>@Localization.CloudERP.Sale.ItemCost</th>
                        </tr>
                    </thead>
                    <tbody>
                        @for (var i = 0; i < ViewBag.InvoiceDetails.Count; i++)
                        {
                            var item = ViewBag.InvoiceDetails[i];
                            <tr>
                                <td>@item.ProductName</td>
                                <td>@item.Qty</td>
                                <td>
                                    <input type="hidden" name="ProductReturns[@i].ProductID" value="@item.ProductID" />
                                    <input type="number" class="form-control" name="ProductReturns[@i].ReturnQty" value="0" min="0" max="@item.Qty" />
                                </td>
                                <td>@item.SaleUnitPrice.ToString("F2")</td>
                                <td>@item.ItemCost.ToString("F2")</td>
                            </tr>
                        }
                    </tbody>
                </table>

                <div class="form-check mt-3">
                    <input type="checkbox" class="form-check-input" id="IsPayment" name="IsPayment" />
                    <label class="form-check-label" for="IsPayment">@Localization.CloudERP.Sale.IsReturnSalePaymentPaid</label>
                </div>

                <button type="submit" class="btn btn-success mt-3">@Localization.CloudERP.Sale.SubmitReturn</button>
            </div>
        </div>
    }
}
