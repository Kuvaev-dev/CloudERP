@model IEnumerable<CloudERP.Models.Forecasting.ForecastData>

@{
    ViewBag.Title = "Forecasting";
}

<h1>Forecasting</h1>

<form action="@Url.Action("GenerateForecast", "Forecasting")" method="post">
    <button type="submit" class="btn btn-primary">Generate Forecast</button>
</form>

@if (TempData["Message"] != null)
{
    <div class="alert alert-success mt-3">
        @TempData["Message"]
    </div>
}

@if (Model != null && Model.Any())
{
    <table class="table mt-3">
        <thead>
            <tr>
                <th>Date</th>
                <th>Value</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Date.ToShortDateString()</td>
                    <td>@item.Value</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-info mt-3">
        No forecast data available.
    </div>
}