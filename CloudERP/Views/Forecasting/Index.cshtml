@model CloudERP.Models.ForecastInputModel

@{
    ViewBag.Title = Resources.ForecastingLocale.Forecasting;
}

<div class="card">
    <div class="card card-float">
        <div class="card-header">
            <h4>@Html.Raw(HttpUtility.HtmlDecode(Resources.ForecastingLocale.SelectToDate))</h4>
            <h3 class="text-danger">@ViewBag.Message</h3>
            <h3 class="text-danger">@ViewBag.ErrorMessage</h3>
        </div>
        <div class="card-body">
            @using (Html.BeginForm("GenerateForecast", "Forecasting"))
            {
                @Html.AntiForgeryToken()
                <div class="row">
                    <div class="col-md-4">
                        <label>@Html.Raw(HttpUtility.HtmlDecode(Resources.ForecastingLocale.Date))</label>
                        <input type="date" id="ToDate" name="EndDate" value="@Model.EndDate.ToString("yyyy-MM-dd")" class="form-control" required>
                    </div>
                </div>
                <br />
                <br />
                <input type="submit" value="@Resources.ForecastingLocale.SubmitForecast" class="btn btn-success" style="float: right;">
            }
        </div>
    </div>
</div>

@if (Model.ForecastData != null)
{
    <div class="table-responsive bootgrid">
        @if (TempData["Message"] != null)
        {
            <h3 class="text-danger mt-5">@TempData["Message"]</h3>
        }
        <table class="table table-striped table-bordered table-hover" id="dataTable">
            <thead>
                <tr>
                    <th>@Resources.ForecastingLocale.Date</th>
                    <th>@Resources.ForecastingLocale.Value</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.ForecastData)
                {
                    <tr>
                        <td>@item.Date.ToShortDateString()</td>
                        <td>@item.Value</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <div class="alert alert-info mt-3">
        @Resources.ForecastingLocale.NoForecastDataAvailable_
    </div>
}