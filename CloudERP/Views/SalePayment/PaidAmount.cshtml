@model IEnumerable<Domain.Models.SaleInfo>

@{
    ViewBag.Title = Localization.CloudERP.Sale.SalePaidAmount;
}

<div class="card">
    <div class="card card-float">
        <div class="card-header">
            <h4>@Localization.CloudERP.Sale.EnterPaymentsDetails</h4>
            <h3 class="text-danger">@ViewBag.Message</h3>
            <h3 class="text-danger">@ViewBag.ErrorMessage</h3>
        </div>
        <div class="card-body">
            @using (Html.BeginForm("PaidAmount", "SalePayment", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                <input type="text" value="@ViewBag.InvoiceID" id="id" name="id" style="display:none;" />
                <div class="row">
                    <div class="col-md-4">
                        <label>@Localization.CloudERP.Sale.SaleRemainingAmount</label>
                        <input type="text" id="previousRemainingAmount" name="previousRemainingAmount" value="@ViewBag.PreviousRemainingAmount" readonly="readonly" class="form-control" required>
                    </div>
                    <div class="col-md-4">
                        <label>@Localization.CloudERP.Sale.PaidAmount</label>
                        <input type="text" id="paidAmount" name="paidAmount" value="10" class="form-control" required>
                    </div>
                    <div class="col-md-4">
                        <label>@Localization.CloudERP.Sale.CurrentRemainingAmount</label>
                        <input type="text" id="remainingAmount" name="remainingAmount" value="10" readonly="readonly" class="form-control" required>
                    </div>
                </div>
                <br />
                <br />
                <input type="submit" value="@Localization.CloudERP.Sale.PaidAmount" class="btn btn-success" style="float: right;">
            }
        </div>
    </div>
</div>

<div class="card card-default col-md-12">
    <div class="card-header">
        <h4 style="float:left;">@Localization.CloudERP.Sale.SaleInvoicePaidDetail</h4>
    </div>
    <div class="card-body">
        <div class="table-responsive bootgrid">
            <table class="table table-hover" id="dataTable">
                <thead>
                    <tr>
                        <th>
                            @Localization.CloudERP.Sale.Supplier
                        </th>
                        <th>
                            @Localization.CloudERP.User.ContactNo
                        </th>
                        <th>
                            @Localization.CloudERP.Sale.InvoiceNo
                        </th>
                        <th>
                            @Localization.CloudERP.Miscellaneous.Date
                        </th>
                        <th>
                            @Localization.CloudERP.Sale.TotalAmount
                        </th>
                        <th>
                            @Localization.CloudERP.Sale.PaidAmount
                        </th>
                        <th>
                            @Localization.CloudERP.Sale.RemainingBalance
                        </th>
                    </tr>
                </thead>
                <tbody id="paymentList">
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.CustomerName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.CustomerContactNo)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.InvoiceNo)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.InvoiceDate)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.TotalAmount)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.PaymentAmount)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.RemainingBalance)
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
<script type="text/javascript">
    $(document).ready(function () {
        $(document).ready(function () {
            $('#dataTable').DataTable({
                "lengthMenu": [[5, 10, 25, 50, 75, 100, 150, 200, -1], [5, 10, 25, 50, 75, 100, 150, 200, "All"]],
            });
        });

        $("#paidAmount").keyup(function () {
            var previousRemainingAmount = $("#previousRemainingAmount").val();
            var payment = this.value;
            $("#remainingAmount").val(previousRemainingAmount - payment);
        })
    })
</script>
