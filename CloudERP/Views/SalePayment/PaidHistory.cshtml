@model IEnumerable<DatabaseAccess.Models.SalePaymentModel>

@{
    double remainingBalance = 0;
    ViewBag.Title = Resources.Sale.SalePaymentDetails.ToString();
}

<script src="~/Scripts/jquery-3.7.1.js"></script>

<div class="card card-default col-md-12">
    <div class="card-body">
        <div class="table-responsive bootgrid">
            <table class="table table-striped table-bordered table-hover" id="dataTable">
                <thead>
                    <tr>
                        <th>
                            @Resources.Sale.Customer.ToString()
                        </th>
                        <th>
                            @Resources.Sale.ContactNo.ToString()
                        </th>
                        <th>
                            @Resources.Sale.InvoiceNo.ToString()
                        </th>
                        <th>
                            @Resources.Sale.Date.ToString()
                        </th>
                        <th>
                            @Resources.Sale.TotalAmount.ToString()
                        </th>
                        <th>
                            @Resources.Sale.PaidAmount.ToString()
                        </th>
                        <th>
                            @Resources.Sale.RemainingBalance.ToString()
                        </th>
                    </tr>
                </thead>
                <tbody id="paymentList">
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.CustomerName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.CustomerContactNo)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.InvoiceNo)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.InvoiceDate)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.TotalAmount)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.PaymentAmount)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.RemainingBalance)
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@{
    double totalReturnRemainingBalance = 0;
    int noOfInvoice = 0;

    if (ViewData["ReturnSaleDetails"] != null)
    {
        <h3>@Resources.Sale.SaleReturnDetails.ToString()</h3>
        var returnSaleDetail = ViewData["ReturnSaleDetails"] as List<DatabaseAccess.tblCustomerReturnInvoice>;
        foreach (DatabaseAccess.tblCustomerReturnInvoice item in returnSaleDetail)
        {
            noOfInvoice += 1;
            double invoiceRemainingBalance = 0;
            double payAmount = item.tblCustomerReturnPayment.Sum(s => s.PaidAmount);
            invoiceRemainingBalance = item.TotalAmount - payAmount;
            totalReturnRemainingBalance += invoiceRemainingBalance;

            <div class="row todo">
                <div class="col-lg-12 todo-item-list">
                    <div id="accordion" role="tablist" aria-multiselectable="true">
                        <div class="card mb-0 todo-item">
                            <div class="card-header">
                                <p class="text-bold mb-0">
                                    <div class="clickable collapsed" data-toggle="collapse" data-parent="#accordion" data-target="#collapseTwo_@noOfInvoice">
                                        <div class="row">
                                            <div class="col-md-1">
                                                <div>
                                                    @Resources.Sale.Customer.ToString():
                                                    <div>
                                                        @item.tblCustomer.Customername
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-md-2">
                                                <div>
                                                    @Resources.Sale.InvoiceDate.ToString():
                                                    <div>
                                                        @item.InvoiceDate
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-md-2">
                                                <div>
                                                    @Resources.Sale.InvoiceNo.ToString():
                                                    <div>
                                                        @item.InvoiceNo
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-md-2">
                                                <div>
                                                    @Resources.Sale.ReturnTotal.ToString():
                                                    <div>
                                                        @item.TotalAmount
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-md-2">
                                                <div>
                                                    @Resources.Sale.ReturnPayment.ToString():
                                                    <div>
                                                        @payAmount
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-md-3">
                                                <div>
                                                    @Resources.Sale.RemainingReturn.ToString():
                                                    <div>
                                                        @invoiceRemainingBalance
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </p>
                            </div>
                            <div class="collapse" id="collapseTwo_@noOfInvoice">
                                <div class="card-body">
                                    <div class="table-responsive bootgrid">
                                        @if (payAmount > 0)
                                        {
                                            <table class="table table-hover" id="dataTable">
                                                <thead>
                                                    <tr>
                                                        <th>
                                                            @Resources.Sale.InvoiceNo.ToString()
                                                        </th>
                                                        <th>
                                                            @Resources.Sale.PaymentDate.ToString()
                                                        </th>
                                                        <th>
                                                            @Resources.Sale.TotalAmount.ToString()
                                                        </th>
                                                        <th>
                                                            @Resources.Sale.PaymentAmount.ToString()
                                                        </th>
                                                        <th>
                                                            @Resources.Sale.RemainingBalance.ToString()
                                                        </th>
                                                    </tr>
                                                </thead>
                                                <tbody id="paymentList">
                                                    @foreach (var paymentDetails in item.tblCustomerReturnPayment)
                                                    {
                                                        <tr>
                                                            <td>
                                                                @paymentDetails.InvoiceNo
                                                            </td>
                                                            <td>
                                                                @paymentDetails.InvoiceDate
                                                            </td>
                                                            <td>
                                                                @paymentDetails.TotalAmount
                                                            </td>
                                                            <td>
                                                                @paymentDetails.PaidAmount
                                                            </td>
                                                            <td>
                                                                @paymentDetails.RemainingBalance
                                                            </td>
                                                        </tr>
                                                    }
                                                </tbody>
                                            </table>
                                        }
                                        else
                                        {
                                            <div class="text-center">
                                                @Resources.Sale.NoPaymentRecord.ToString()
                                            </div>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <br />

        }
    }
    remainingBalance = ((double)ViewBag.PreviousRemainingAmount - totalReturnRemainingBalance);
}

<div class="row">
    <div class="col-lg-6"></div>
    <div class="col-lg-6 py-2">
        <div class="row mb-3 align-items-center">
            <div class="col-7">
                <div class="h3">@Resources.Sale.RemainingTotalBalance.ToString(): </div>
            </div>
            <div class="col-5">
                <div id="previousRemainingAmounts" class="text-left h3">@remainingBalance.ToString("F2")</div>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
    $(document).ready(function () {
        $('#dataTable').DataTable({
            "columnDefs": [{ "orderable": false, "targets": 3 }],
            "lengthMenu": [[5, 10, 25, 50, 75, 100, 150, 200, -1], [5, 10, 25, 50, 75, 100, 150, 200, "All"]],
        });
    });
</script>
