@model IEnumerable<Domain.Models.SaleInfo>

@{
    double remainingBalance = 0;
    ViewBag.Title = Localization.CloudERP.Sale.SalePaymentDetails;
}

<!-- Tables Sorting-->
<script src="https://code.jquery.com/jquery-3.7.0.min.js"></script>
<link href="https://cdn.datatables.net/v/bs5/dt-2.2.2/datatables.min.css" rel="stylesheet">
<script src="https://cdn.datatables.net/v/bs5/dt-2.2.2/datatables.min.js"></script>

<style>
    #dataTable_filter input[type="search"] {
        width: 15rem;
    }
</style>

<div class="card card-default col-md-12">
    <div class="card-body">
        <div class="table-responsive bootgrid">
            <table class="table table-striped table-bordered table-hover" id="dataTable">
                <thead>
                    <tr>
                        <th>
                            @Localization.CloudERP.Sale.Customer
                        </th>
                        <th>
                            @Localization.CloudERP.User.ContactNo
                        </th>
                        <th>
                            @Localization.CloudERP.Sale.InvoiceNo
                        </th>
                        <th>
                            @Localization.CloudERP.Miscellaneous.Date
                        </th>
                        <th>
                            @Localization.CloudERP.Sale.TotalAmount
                        </th>
                        <th>
                            @Localization.CloudERP.Sale.PaidAmount
                        </th>
                        <th>
                            @Localization.CloudERP.Sale.RemainingBalance
                        </th>
                    </tr>
                </thead>
                <tbody id="paymentList">
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.CustomerName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.CustomerContactNo)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.InvoiceNo)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.InvoiceDate)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.TotalAmount)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.PaymentAmount)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.RemainingBalance)
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@{
    double totalReturnRemainingBalance = 0;
    int noOfInvoice = 0;

    if (ViewData["ReturnSaleDetails"] != null)
    {
        <h3>@Localization.CloudERP.Sale.SaleReturnDetails</h3>
        var returnSaleDetail = ViewData["ReturnSaleDetails"] as List<Domain.Models.CustomerReturnInvoice>;
        foreach (Domain.Models.CustomerReturnInvoice item in returnSaleDetail)
        {
            noOfInvoice += 1;
            double invoiceRemainingBalance = 0;
            double payAmount = item.CustomerReturnPayment.Sum(s => s.PaidAmount);
            invoiceRemainingBalance = item.TotalAmount - payAmount;
            totalReturnRemainingBalance += invoiceRemainingBalance;

            <div class="row todo">
                <div class="col-lg-12 todo-item-list">
                    <div id="accordion" role="tablist" aria-multiselectable="true">
                        <div class="card mb-0 todo-item">
                            <div class="card-header">
                                <p class="text-bold mb-0">
                                    <div class="clickable collapsed" data-toggle="collapse" data-parent="#accordion" data-target="#collapseTwo_@noOfInvoice">
                                        <div class="row">
                                            <div class="col-md-1">
                                                <div>
                                                    @Localization.CloudERP.Sale.Customer:
                                                    <div>
                                                        @item.CustomerName
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-md-2">
                                                <div>
                                                    @Localization.CloudERP.Sale.InvoiceDate:
                                                    <div>
                                                        @item.InvoiceDate
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-md-2">
                                                <div>
                                                    @Localization.CloudERP.Sale.InvoiceNo:
                                                    <div>
                                                        @item.InvoiceNo
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-md-2">
                                                <div>
                                                    @Localization.CloudERP.Sale.ReturnTotal:
                                                    <div>
                                                        @item.TotalAmount
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-md-2">
                                                <div>
                                                    @Localization.CloudERP.Sale.ReturnPayment:
                                                    <div>
                                                        @payAmount
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-md-3">
                                                <div>
                                                    @Localization.CloudERP.Sale.RemainingReturn:
                                                    <div>
                                                        @invoiceRemainingBalance
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </p>
                            </div>
                            <div class="collapse" id="collapseTwo_@noOfInvoice">
                                <div class="card-body">
                                    <div class="table-responsive bootgrid">
                                        @if (payAmount > 0)
                                        {
                                            <table class="table table-hover" id="dataTable">
                                                <thead>
                                                    <tr>
                                                        <th>
                                                            @Localization.CloudERP.Sale.InvoiceNo
                                                        </th>
                                                        <th>
                                                            @Localization.CloudERP.Sale.PaymentDate
                                                        </th>
                                                        <th>
                                                            @Localization.CloudERP.Sale.TotalAmount
                                                        </th>
                                                        <th>
                                                            @Localization.CloudERP.Sale.PaymentAmount
                                                        </th>
                                                        <th>
                                                            @Localization.CloudERP.Sale.RemainingBalance
                                                        </th>
                                                    </tr>
                                                </thead>
                                                <tbody id="paymentList">
                                                    @foreach (var paymentDetails in item.CustomerReturnPayment)
                                                    {
                                                        <tr>
                                                            <td>
                                                                @paymentDetails.InvoiceNo
                                                            </td>
                                                            <td>
                                                                @paymentDetails.InvoiceDate
                                                            </td>
                                                            <td>
                                                                @paymentDetails.TotalAmount
                                                            </td>
                                                            <td>
                                                                @paymentDetails.PaidAmount
                                                            </td>
                                                            <td>
                                                                @paymentDetails.RemainingBalance
                                                            </td>
                                                        </tr>
                                                    }
                                                </tbody>
                                            </table>
                                        }
                                        else
                                        {
                                            <div class="text-center">
                                                @Localization.CloudERP.Sale.NoPaymentRecord
                                            </div>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <br />

        }
    }
    remainingBalance = ((double)ViewBag.PreviousRemainingAmount - totalReturnRemainingBalance);
}

<div class="row">
    <div class="col-lg-6"></div>
    <div class="col-lg-6 py-2">
        <div class="row mb-3 align-items-center">
            <div class="col-7">
                <div class="h3">@Localization.CloudERP.Sale.RemainingTotalBalance: </div>
            </div>
            <div class="col-5">
                <div id="previousRemainingAmounts" class="text-left h3">@remainingBalance.ToString("F2")</div>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
    $(document).ready(function () {
        $('#dataTable').DataTable({
            "lengthMenu": [[5, 10, 25, 50, 75, 100, 150, 200, -1], [5, 10, 25, 50, 75, 100, 150, 200, "All"]],
        });
    });
</script>
