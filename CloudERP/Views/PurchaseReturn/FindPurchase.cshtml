@model Domain.Models.SupplierInvoice
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor

@{
    ViewBag.Title = Localization.CloudERP.Purchase.SearchPurchaseByInvoiceNo;
}

@using (Html.BeginForm("FindPurchase", "PurchaseReturn", FormMethod.Post, null))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h3 class="text-danger">@ViewBag.Message</h3>
        <h3 class="text-danger">@ViewBag.ErrorMessage</h3>

        <div class="form-group">
            <label class="control-label col-md-2">Enter Purchase Invoice №</label>
            <div class="col-md-5">
                <input type="text" class="form-control" id="invoiceID" name="invoiceID" placeholder="Enter Purchase Invoice..." required />
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-5">
                <input type="submit" value="Find Purchase" class="btn btn-success" />
            </div>
        </div>
    </div>
}

@if (Model != null && Model.InvoiceNo != null)
{
    try
    {
        using (Html.BeginForm("ReturnConfirm", "PurchaseReturn", FormMethod.Post, null))
        {
            @Html.AntiForgeryToken()

            <input type="hidden" name="SupplierInvoiceID" value="@Model.SupplierInvoiceID" />

            <div class="card mt-4">
                <div class="card-header">
                    <h3>@Localization.CloudERP.Purchase.Invoice №: @Model.InvoiceNo</h3>
                    <h3 class="text-danger">@HttpContextAccessor.HttpContext?.Session.GetString("PurchaseReturnMessage")</h3>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <h4>@Localization.CloudERP.Company.CompanyTitle:</h4>
                            <p>@Model.CompanyName - @Model.BranchName</p>
                            <p>@Localization.CloudERP.Branch.BranchAddress: @Model.BranchAddress</p>
                            <p>@Localization.CloudERP.Purchase.ContactNo: @Model.BranchContact</p>
                        </div>
                        <div class="col-md-6">
                            <h4>@Localization.CloudERP.Purchase.Supplier:</h4>
                            <p>@Model.SupplierName</p>
                            <p>@Model.SupplierAddress</p>
                            <p>@Model.SupplierConatctNo</p>
                        </div>
                    </div>

                    <table class="table table-bordered mt-4">
                        <thead>
                            <tr>
                                <th>@Localization.CloudERP.Sale.Product</th>
                                <th>@Localization.CloudERP.Purchase.PurchaseQty</th>
                                <th>@Localization.CloudERP.Purchase.ReturnQty</th>
                                <th>@Localization.CloudERP.Purchase.UnitPrice</th>
                                <th>@Localization.CloudERP.Purchase.ItemCost</th>
                            </tr>
                        </thead>
                        <tbody>
                            @for (var i = 0; i < ViewBag.InvoiceDetails.Count; i++)
                            {
                                var item = ViewBag.InvoiceDetails[i];
                                <tr>
                                    <td>@item.ProductName</td>
                                    <td>@item.Qty</td>
                                    <td>
                                        <input type="hidden" name="ProductReturns[@i].ProductID" value="@item.ProductID" />
                                        <input type="number" class="form-control" name="ProductReturns[@i].ReturnQty" value="0" min="0" max="@item.Qty" />
                                    </td>
                                    <td>@item.PurchaseUnitPrice.ToString("F2")</td>
                                    <td>@item.ItemCost.ToString("F2")</td>
                                </tr>
                            }
                        </tbody>
                    </table>

                    <div class="form-check mt-3">
                        <input type="checkbox" class="form-check-input" id="IsPayment" name="IsPayment" />
                        <label class="form-check-label" for="IsPayment">@Localization.CloudERP.Purchase.IsReturnPurchasePaymentPaid</label>
                    </div>

                    <button type="submit" class="btn btn-success mt-3">@Localization.CloudERP.Purchase.SubmitReturn</button>
                </div>
            </div>
        }
    }
    catch
    {

    }
}