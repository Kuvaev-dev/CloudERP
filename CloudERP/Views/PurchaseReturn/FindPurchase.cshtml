@model Domain.Models.SupplierInvoice

@{
    ViewBag.Title = Resources.Purchase.SearchPurchaseByInvoiceNo;
}

@using (Html.BeginForm("FindPurchase", "PurchaseReturn", FormMethod.Post, null))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h3 class="text-danger">@ViewBag.Message</h3>
        <h3 class="text-danger">@ViewBag.ErrorMessage</h3>

        <div class="form-group">
            <label class="control-label col-md-2">Enter Purchase Invoice №</label>
            <div class="col-md-5">
                <input type="text" class="form-control" id="invoiceID" name="invoiceID" placeholder="Enter Purchase Invoice..." required />
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-5">
                <input type="submit" value="Find Purchase" class="btn btn-success" />
            </div>
        </div>
    </div>
}

@if (Model != null && Model.InvoiceNo != null)
{
    try
    {
        using (Html.BeginForm("ReturnConfirm", "PurchaseReturn", FormMethod.Post, null))
        {
            @Html.AntiForgeryToken()

            <input type="hidden" name="SupplierInvoiceID" value="@Model.SupplierInvoiceID" />

            <div class="card mt-4">
                <div class="card-header">
                    <h3>@Resources.Purchase.Invoice.ToString() №: @Model.InvoiceNo</h3>
                    <h3 class="text-danger">@Session["PurchaseReturnMessage"]</h3>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <h4>@Resources.Company.CompanyTitle.ToString():</h4>
                            <p>@Model.CompanyName - @Model.BranchName</p>
                            <p>@Resources.Branch.BranchAddress.ToString(): @Model.BranchAddress</p>
                            <p>@Resources.Purchase.ContactNo.ToString(): @Model.BranchContact</p>
                        </div>
                        <div class="col-md-6">
                            <h4>@Resources.Purchase.Supplier.ToString():</h4>
                            <p>@Model.SupplierName</p>
                            <p>@Model.SupplierAddress</p>
                            <p>@Model.SupplierConatctNo</p>
                        </div>
                    </div>

                    <table class="table table-bordered mt-4">
                        <thead>
                            <tr>
                                <th>@Resources.Sale.Product.ToString()</th>
                                <th>@Resources.Purchase.PurchaseQty.ToString()</th>
                                <th>@Resources.Purchase.ReturnQty.ToString()</th>
                                <th>@Resources.Purchase.UnitPrice.ToString()</th>
                                <th>@Resources.Purchase.ItemCost.ToString()</th>
                            </tr>
                        </thead>
                        <tbody>
                            @for (var i = 0; i < ViewBag.InvoiceDetails.Count; i++)
                            {
                                var item = ViewBag.InvoiceDetails[i];
                                <tr>
                                    <td>@item.ProductName</td>
                                    <td>@item.Qty</td>
                                    <td>
                                        <input type="hidden" name="ProductReturns[@i].ProductID" value="@item.ProductID" />
                                        <input type="number" class="form-control" name="ProductReturns[@i].ReturnQty" value="0" min="0" max="@item.Qty" />
                                    </td>
                                    <td>@item.PurchaseUnitPrice.ToString("F2")</td>
                                    <td>@item.ItemCost.ToString("F2")</td>
                                </tr>
                            }
                        </tbody>
                    </table>

                    <div class="form-check mt-3">
                        <input type="checkbox" class="form-check-input" id="IsPayment" name="IsPayment" />
                        <label class="form-check-label" for="IsPayment">@Resources.Purchase.IsReturnPurchasePaymentPaid.ToString()</label>
                    </div>

                    <button type="submit" class="btn btn-success mt-3">@Resources.Purchase.SubmitReturn.ToString()</button>
                </div>
            </div>
        }
    }
    catch
    {

    }
}