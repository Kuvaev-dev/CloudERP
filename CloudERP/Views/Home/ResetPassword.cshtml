@model CloudERP.Models.ResetPasswordModel

@{
    Layout = null;
}

<div class="wrapper">
    <div class="block-center mt-4 wd-xl">
        <div class="card card-flat">
            <div class="card-header text-center bg-dark">
                <a href="#">
                    <img class="block-center rounded" width="50" height="50" src="~/Content/CompanyLogo/erp-logo.png" alt="Cloud ERP">
                </a>
            </div>
            <div class="card-body">
                <p class="text-center py-2">ENTER YOUR NEW PASSWORD.</p>
                @using (Html.BeginForm("ResetPassword", "Home", FormMethod.Post, new { @class = "mb-3", id = "resetPasswordForm" }))
                {
                    @Html.AntiForgeryToken()

                    @Html.HiddenFor(model => model.ResetCode)

                    <p class="text-danger">@ViewBag.Message</p>
                    <div class="form-group">
                        <div class="input-group with-focus">
                            @Html.PasswordFor(model => model.NewPassword, new { @class = "form-control border-right-0", placeholder = "New password", required = "required" })
                            <div class="input-group-append">
                                <span class="input-group-text fa fa-lock text-muted bg-transparent border-left-0"></span>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="input-group with-focus">
                            @Html.PasswordFor(model => model.ConfirmPassword, new { @class = "form-control border-right-0", placeholder = "Confirm new password", required = "required" })
                            <div class="input-group-append">
                                <span class="input-group-text fa fa-lock text-muted bg-transparent border-left-0"></span>
                            </div>
                        </div>
                    </div>
                    <button class="btn btn-block btn-primary mt-3" type="submit">Submit</button>
                }
            </div>
        </div>
        <div class="p-3 text-center">
            <span class="mr-2">&copy;</span>
            <span>2023</span>
            <span class="mr-2"></span>
            <span class="mr-2">-</span>
            <span>Kuvaiev Inc.</span>
        </div>
    </div>
</div>