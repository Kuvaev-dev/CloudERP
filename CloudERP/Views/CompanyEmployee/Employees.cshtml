@model IEnumerable<DatabaseAccess.tblEmployee>

@{
    ViewBag.Title = Resources.CompanyEmployee.AllEmployees.ToString();
}

<!-- Tables Sorting-->
<link href="https://cdn.datatables.net/1.11.6/css/jquery.dataTables.min.css" rel="stylesheet" />
<script src="~/Scripts/jquery-3.7.1.js"></script>
<script src="https://cdn.datatables.net/1.11.6/js/jquery.dataTables.min.js"></script>

<style>
    #dataTable_filter input[type="search"] {
        width: 15rem;
    }
</style>

<div class="card card-default col-md-12">
    <div class="card-header">
        @Html.ActionLink(Resources.CompanyEmployee.AddEmployee.ToString(), "EmployeeRegistration", "CompanyEmployee", null, new { @style = "float:left;", @class = "btn btn-success" })
    </div>
    <div class="card-body">
        <div class="table-responsive bootgrid">
            <table class="table table-striped table-bordered table-hover" id="dataTable">
                <thead>
                    <tr>
                        <th>
                            @Html.Raw(HttpUtility.HtmlDecode(Resources.Branch.BranchName))
                        </th>
                        <th>
                            @Html.Raw(HttpUtility.HtmlDecode(Resources.User.FullName))
                        </th>
                        <th>
                            @Html.Raw(HttpUtility.HtmlDecode(Resources.User.ContactNo))
                        </th>
                        <th>
                            @Html.Raw(HttpUtility.HtmlDecode(Resources.CompanyEmployee.Photo))
                        </th>
                        <th>
                            @Html.Raw(HttpUtility.HtmlDecode(Resources.CompanyEmployee.Designation))
                        </th>
                        <th>
                            @Html.Raw(HttpUtility.HtmlDecode(Resources.Repeats.Actions))
                        </th>
                    </tr>
                </thead>
                <tbody id="employeeList">
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.tblBranch.BranchName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ContactNo)
                            </td>
                            <td>
                                @if (!string.IsNullOrEmpty(item.Photo))
                                {
                                    <img src="@Url.Content(item.Photo)" alt="image" style="width:50px;height:50px;max-width:100%;height:auto;" />
                                }
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Designation)
                            </td>
                            <td class="btn-group">
                                @Html.ActionLink(Resources.CompanyEmployee.Profile.ToString(), "ViewProfile", "BranchEmployee", new { id = item.EmployeeID }, new { @class = "btn btn-info" })

                                @if (item.UserID == null)
                                {
                                    @Html.ActionLink(Resources.CompanyEmployee.CreateUser.ToString(), "CreateUser", "UserSetting", new { employeeID = item.EmployeeID }, new { @class = "btn btn-primary" })
                                }
                                else
                                {
                                    @Html.ActionLink(Resources.CompanyEmployee.UpdateUser.ToString(), "UpdateUser", "UserSetting", new { userID = item.UserID }, new { @class = "btn btn-primary" })
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
<script type="text/javascript">
    $(document).ready(function () {
        $('#dataTable').DataTable({
            "columnDefs": [{ "orderable": false, "targets": [3, 5] }],
            "lengthMenu": [[5, 10, 25, 50, 75, 100, 150, 200, -1], [5, 10, 25, 50, 75, 100, 150, 200, "All"]],
        });
    });
</script>