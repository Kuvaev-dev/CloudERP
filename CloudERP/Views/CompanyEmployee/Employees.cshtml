@model IEnumerable<Domain.Models.Employee>
@using Localization.CloudERP.Modules.Company;
@using Localization.CloudERP.Common;
@using Localization.CloudERP.Modules.Branch;
@using Localization.CloudERP.Modules.Miscellaneous;
@{
    ViewBag.Title = Company.AllEmployees;
}

<!-- Tables Sorting-->
<script src="https://code.jquery.com/jquery-3.7.0.min.js"></script>
<link href="https://cdn.datatables.net/v/bs5/dt-2.2.2/datatables.min.css" rel="stylesheet">
<script src="https://cdn.datatables.net/v/bs5/dt-2.2.2/datatables.min.js"></script>

<style>
    #dataTable_filter input[type="search"] {
        width: 15rem;
    }
</style>

<div class="card card-default col-md-12">
    <div class="card-header">
        @Html.ActionLink(Company.AddEmployee, "EmployeeRegistration", "CompanyEmployee", null, new { @style = "float:left;", @class = "btn btn-success" })
        <h3 class="text-danger">@ViewBag.Message</h3>
        <h3 class="text-danger">@ViewBag.ErrorMessage</h3>
    </div>
    <div class="card-body">
        <div class="table-responsive bootgrid">
            <table class="table table-striped table-bordered table-hover" id="dataTable">
                <thead>
                    <tr>
                        <th>
                            @Html.Raw(Branch.BranchName)
                        </th>
                        <th>
                            @Html.Raw(Localization.CloudERP.Modules.User.User.FullName)
                        </th>
                        <th>
                            @Html.Raw(Localization.CloudERP.Modules.User.User.ContactNo)
                        </th>
                        <th>
                            @Html.Raw(Miscellaneous.Photo)
                        </th>
                        <th>
                            @Html.Raw(Localization.CloudERP.Modules.User.User.Designation)
                        </th>
                        <th>
                            @Html.Raw(Common.Actions)
                        </th>
                    </tr>
                </thead>
                <tbody id="employeeList">
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.BranchName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.FullName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ContactNumber)
                            </td>
                            <td>
                                @if (!string.IsNullOrEmpty(item.Photo))
                                {
                                    <img src="@Url.Content(item.Photo)" alt="image" style="width:50px;height:50px;max-width:100%;height:auto;" />
                                }
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Designation)
                            </td>
                            <td class="d-flex btn-group">
                                @Html.ActionLink(Company.Profile, "ViewProfile", "BranchEmployee", new { id = item.EmployeeID }, new { @class = "btn btn-info" })

                                @if (item.UserID == null)
                                {
                                    @Html.ActionLink(Company.CreateUser, "CreateUser", "UserSetting", new { employeeID = item.EmployeeID }, new { @class = "btn btn-primary" })
                                }
                                else
                                {
                                    @Html.ActionLink(Company.UpdateUser, "UpdateUser", "UserSetting", new { userID = item.UserID }, new { @class = "btn btn-primary" })
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
<script type="text/javascript">
    $(document).ready(function () {
        $('#dataTable').DataTable({
            "columnDefs": [{ "orderable": false, "targets": [3, 5] }],
            "lengthMenu": [[5, 10, 25, 50, 75, 100, 150, 200, -1], [5, 10, 25, 50, 75, 100, 150, 200, "All"]],
        });
    });
</script>