@model Domain.Models.Payroll
@using Localization.CloudERP.Modules.Company
@using Localization.CloudERP.Modules.Branch
@using Localization.CloudERP.Modules.Sale
@using Localization.CloudERP.Common
@using Localization.CloudERP.Modules.Miscellaneous
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <title>@Sale.SaleInvoice</title>
    <link rel="stylesheet" href="~/Template/css/bootstrap.css">
    <link rel="stylesheet" href="~/Template/css/app.css">
    <link rel="stylesheet" href="~/CustomStyles/PrintInvoice.css">
</head>
<body>
    <div class="content-wrapper">
        <div class="card">
            <div class="card-body">
                <h3>@Html.Raw(Company.PrintInvoiceNo): @Model.PayrollInvoiceNo</h3>
                <hr>
                <div class="row mb-3 ml-1">
                    <div class="w-auto m-3">
                        <img src="@Url.Content(Model.CompanyLogo)" class="img-fluid" style="max-width: 50px; height: auto;" />
                    </div>
                    <div class="col-xl-3 col-7 br py-2">
                        <h4>@Company.CompanyDetails</h4>
                        <hr>
                        <h4>@Model.CompanyName</h4>
                    </div>
                    <div class="w-auto m-3">
                        <img src="@Url.Content(Model.CompanyLogo)" class="img-fluid" style="max-width: 50px; height: auto;" />
                    </div>
                    <div class="col-xl-4 col-7 br py-2">
                        <h4>@Branch.BranchName</h4>
                        <hr />
                        <h4>@Model.BranchName</h4>
                        <h5>@Localization.CloudERP.Modules.User.User.ContactNo: @Model.BranchContact</h5>
                        <address>@Model.BranchAddress</address>
                    </div>
                    <div class="col-xl-3 col-7 py-2">
                        <h4>@Miscellaneous.Date</h4>
                        <hr />
                        <p>@Miscellaneous.InvoiceNo: @Model.PayrollInvoiceNo</p>
                        <p>@Sale.InvoiceDate: @DateTime.Now.ToString("dd/MM/yyyy hh:mm:ss tt")</p>
                        <p>@Miscellaneous.PrintDate: @DateTime.Now.ToString("dd/MM/yyyy hh:mm:ss tt")</p>
                    </div>
                </div>
                <h4>@Company.EmployeeSalary</h4>
                <hr />
                <div class="table-responsive table-bordered mb-3">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>@Company.EmployeeName</th>
                                <th>@Company.SalaryMonth</th>
                                <th>@Company.SalaryYear</th>
                                <th>@Localization.CloudERP.Modules.User.User.CreatedBy</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>@Model.EmployeeName</td>
                                <td>@Model.SalaryMonth</td>
                                <td>@Model.SalaryYear</td>
                                <td>@Model.UserName</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
                <div class="row">
                    <div class="col-lg-6"></div>
                    <div class="col-lg-6 py-2">
                        <div class="row mb-3 align-items-center">
                            <div class="col-7">
                                <div class="h3">@Html.Raw(Company.TotalSalary)</div>
                            </div>
                            <div class="col-5">
                                <div class="text-right h3">@Model.TransferAmount @Html.Raw(Common.UAH)</div>
                            </div>
                        </div>
                    </div>
                </div>
                <hr class="d-print-none">
                <div class="clearfix">
                    <button class="btn btn-secondary float-left" type="button" onclick="window.print();">@Html.Raw(Company.Print)</button>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
