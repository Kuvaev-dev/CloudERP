@model IEnumerable<Domain.Models.Payroll>

@{
    ViewBag.Title = Resources.Company.SalariesSucceedList.ToString();
}

<!-- Tables Sorting-->
<link href="https://cdn.datatables.net/1.11.6/css/jquery.dataTables.min.css" rel="stylesheet" />
<script src="~/Scripts/jQuery/jquery-3.7.1.js"></script>
<script src="https://cdn.datatables.net/1.11.6/js/jquery.dataTables.min.js"></script>

<style>
    #dataTable_filter input[type="search"] {
        width: 15rem;
    }
</style>

<div class="card card-default col-md-12">
    <div class="card-body">
        <div class="table-responsive bootgrid">
            <table class="table table-striped table-bordered table-hover" id="dataTable">
                <thead>
                    <tr>
                        <th>
                            @Html.Raw(HttpUtility.HtmlDecode(Resources.Company.Employee))
                        </th>
                        <th>
                            @Html.Raw(HttpUtility.HtmlDecode(Resources.Company.InvoiceNo))
                        </th>
                        <th>
                            @Html.Raw(HttpUtility.HtmlDecode(Resources.Company.Date))
                        </th>
                        <th>
                            @Html.Raw(HttpUtility.HtmlDecode(Resources.Company.PaidSalary))
                        </th>
                        <th>
                            @Html.Raw(HttpUtility.HtmlDecode(Resources.Company.SalaryMonth))
                        </th>
                        <th>
                            @Html.Raw(HttpUtility.HtmlDecode(Resources.Company.SalaryYear))
                        </th>
                        <th>
                            @Html.Raw(HttpUtility.HtmlDecode(Resources.Company.CreatedBy))
                        </th>
                        <th>
                            @Html.Raw(HttpUtility.HtmlDecode(Resources.Company.SalaryInvoice))
                        </th>
                    </tr>
                </thead>
                <tbody id="financialYearList">
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.EmployeeName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.PayrollInvoiceNo)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.PaymentDate)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.TransferAmount)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.SalaryMonth)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.SalaryYear)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.UserName)
                            </td>
                            <td>
                                @Html.ActionLink(Resources.Company.PrintPayroll.ToString(), "PrintSalaryInvoice", new { id = item.PayrollID }, new { @class = "btn btn-info" })
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
<script type="text/javascript">
    $(document).ready(function () {
        $('#dataTable').DataTable({
            "columnDefs": [{ "orderable": false, "targets": 7 }],
            "lengthMenu": [[5, 10, 25, 50, 75, 100, 150, 200, -1], [5, 10, 25, 50, 75, 100, 150, 200, "All"]],
        });
    });
</script>