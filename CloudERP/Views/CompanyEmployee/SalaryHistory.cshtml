@model IEnumerable<DatabaseAccess.tblPayroll>

@{
    ViewBag.Title = "Salaries Succeed List";
}

<!-- Tables Sorting-->
<link href="https://cdn.datatables.net/1.11.6/css/jquery.dataTables.min.css" rel="stylesheet" />
<script src="~/Scripts/jquery-3.7.1.js"></script>
<script src="https://cdn.datatables.net/1.11.6/js/jquery.dataTables.min.js"></script>

<style>
    #dataTable_filter input[type="search"] {
        width: 15rem;
    }
</style>

<div class="card card-default col-md-12">
    <div class="card-body">
        <div class="table-responsive bootgrid">
            <table class="table table-striped table-bordered table-hover" id="dataTable">
                <thead>
                    <tr>
                        <th>
                            Employee
                        </th>
                        <th>
                            Invoice №
                        </th>
                        <th>
                            Date
                        </th>
                        <th>
                            Paid Salary
                        </th>
                        <th>
                            Salary Month
                        </th>
                        <th>
                            Salary Year
                        </th>
                        <th>
                            Created By
                        </th>
                        <th>
                            Salary Invoice
                        </th>
                    </tr>
                </thead>
                <tbody id="financialYearList">
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.tblEmployee.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.PayrollInvoiceNo)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.PaymentDate)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.TransferAmount)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.SalaryMonth)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.SalaryYear)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.tblUser.FullName)
                            </td>
                            <td>
                                @Html.ActionLink("Print Payroll", "PrintSalaryInvoice", new { id = item.PayrollID }, new { @class = "btn btn-info" })
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
<script type="text/javascript">
    $(document).ready(function () {
        $('#dataTable').DataTable({
            "columnDefs": [{ "orderable": false, "targets": 7 }],
            "lengthMenu": [[5, 10, 25, 50, 75, 100, 150, 200, -1], [5, 10, 25, 50, 75, 100, 150, 200, "All"]],
        });
    });
</script>