@model IEnumerable<DatabaseAccess.tblPayroll>

@{
    ViewBag.Title = "Salaries Succeed List";
}

<script src="~/Scripts/jquery-3.7.1.js"></script>

<div class="card card-default col-md-12">
    <div class="card-header">
        <input class="form-control col-md-3" style="float:right;" type="text" id="searchFinancialYear" name="searchFinancialYear" placeholder="Search..." />
    </div>
    <div class="card-body">
        <div class="table-responsive bootgrid">
            <table class="table table-striped table-bordered table-hover" id="dataTable">
                <thead>
                    <tr>
                        <th>
                            Employee
                        </th>
                        <th>
                            Invoice №
                        </th>
                        <th>
                            Date
                        </th>
                        <th>
                            Paid Salary
                        </th>
                        <th>
                            Salary Month
                        </th>
                        <th>
                            Salary Year
                        </th>
                        <th>
                            Created By
                        </th>
                        <th>
                            Salary Invoice
                        </th>
                    </tr>
                </thead>
                <tbody id="financialYearList">
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.tblEmployee.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.PayrollInvoiceNo)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.PaymentDate)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.TransferAmount)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.SalaryMonth)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.SalaryYear)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.tblUser.FullName)
                            </td>
                            <td>
                                @Html.ActionLink("Print Payroll", "PrintSalaryInvoice", new { id = item.PayrollID }, new { @class="btn btn-info" })
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
<script type="text/javascript">
    $(document).ready(function () {
        $("#searchFinancialYear").on("keyup", function () {
            var value = $(this).val().toLowerCase();
            $("#financialYearList tr").filter(function () {
                $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
            })
        })
    })
</script>