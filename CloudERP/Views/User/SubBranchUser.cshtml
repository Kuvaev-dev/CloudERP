@model IEnumerable<Domain.Models.User>

@{
    ViewBag.Title = Resources.User.AllUsers.ToString();
}

<!-- Tables Sorting-->
<link href="https://cdn.datatables.net/1.11.6/css/jquery.dataTables.min.css" rel="stylesheet" />
<script src="~/Scripts/jquery-3.7.1.js"></script>
<script src="https://cdn.datatables.net/1.11.6/js/jquery.dataTables.min.js"></script>

<style>
    #dataTable_filter input[type="search"] {
        width: 15rem;
    }
</style>

<div class="card card-default col-md-12">
    <div class="card-body">
        <div class="table-responsive bootgrid">
            <table class="table table-striped table-bordered table-hover" id="dataTable">
                <thead>
                    <tr>
                        <th>
                            @Html.Raw(HttpUtility.HtmlDecode(Resources.User.FullName))
                        </th>
                        <th>
                            @Html.Raw(HttpUtility.HtmlDecode(Resources.User.EmailAddress))
                        </th>
                        <th>
                            @Html.Raw(HttpUtility.HtmlDecode(Resources.User.ContactNo))
                        </th>
                        <th>
                            @Html.Raw(HttpUtility.HtmlDecode(Resources.User.UserName))
                        </th>
                        <th>
                            @Html.Raw(HttpUtility.HtmlDecode(Resources.User.Status))
                        </th>
                        <th>
                            @Html.Raw(HttpUtility.HtmlDecode(Resources.User.UserType))
                        </th>
                        <th>
                            @Html.Raw(HttpUtility.HtmlDecode(Resources.Common.Actions))
                        </th>
                    </tr>
                </thead>
                <tbody id="userList">
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.FullName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Email)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ContactNo)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.UserName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.IsActive)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.tblUserType.UserType)
                            </td>
                            <td>
                                @Html.ActionLink(Resources.Common.Edit.ToString(), "Edit", new { id = item.UserID }, new { @class = "btn btn-primary" })
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
<script type="text/javascript">
    $(document).ready(function () {
        $('#dataTable').DataTable({
            "columnDefs": [{ "orderable": false, "targets": 6 }],
            "lengthMenu": [[5, 10, 25, 50, 75, 100, 150, 200, -1], [5, 10, 25, 50, 75, 100, 150, 200, "All"]],
        });
    });
</script>