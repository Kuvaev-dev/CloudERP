@model IEnumerable<Domain.Models.User>

@{
    ViewBag.Title = Localization.CloudERP.Modules.User.User.AllUsers;
}

<!-- Tables Sorting-->
<script src="https://code.jquery.com/jquery-3.7.0.min.js"></script>

<style>
    #dataTable_filter input[type="search"] {
        width: 15rem;
    }
</style>

<div class="card card-default">
    <div class="card-body">
        <div class="table-responsive bootgrid">
            <table class="table table-striped table-bordered table-hover" id="dataTable">
                <thead>
                    <tr>
                        <th>
                            @Html.Raw(Localization.CloudERP.Modules.User.User.FullName)
                        </th>
                        <th>
                            @Html.Raw(Localization.CloudERP.Modules.User.User.EmailAddress)
                        </th>
                        <th>
                            @Html.Raw(Localization.CloudERP.Modules.User.User.ContactNo)
                        </th>
                        <th>
                            @Html.Raw(Localization.CloudERP.Modules.User.User.UserName)
                        </th>
                        <th>
                            @Html.Raw(Localization.CloudERP.Modules.User.User.Status)
                        </th>
                        <th>
                            @Html.Raw(Localization.CloudERP.Modules.User.User.UserType)
                        </th>
                        <th>
                            @Html.Raw(Localization.CloudERP.Common.Common.Actions)
                        </th>
                    </tr>
                </thead>
                <tbody id="list">
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.FullName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Email)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ContactNo)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.UserName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.IsActive)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.UserTypeName)
                            </td>
                            <td class="d-flex btn-group">
                                @Html.ActionLink(Localization.CloudERP.Common.Common.Edit, "Edit", new { id = item.UserID }, new { @class = "btn btn-primary" })
                                @Html.ActionLink(Localization.CloudERP.Common.Common.Details, "Details", new { id = item.UserID }, new { @class = "btn btn-info" })
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
<script type="text/javascript">
    $(document).ready(function () {
        $('#dataTable').DataTable({
            layout: {
                topStart: {
                    buttons: [
                        { extend: 'copy', className: 'btn btn-secondary', exportOptions: { columns: [0] } },
                        { extend: 'csv', className: 'btn btn-secondary', exportOptions: { columns: [0] } },
                        { extend: 'excel', className: 'btn btn-secondary', exportOptions: { columns: [0] } },
                        { extend: 'pdf', className: 'btn btn-secondary', exportOptions: { columns: [0] } },
                        { extend: 'print', className: 'btn btn-secondary', exportOptions: { columns: [0] } }
                    ]
                },
                topEnd: 'search',
                bottomStart: 'info',
                bottomEnd: 'paging',
                top2Start: 'pageLength'
            },
            columnDefs: [{ orderable: false, targets: 6 }],
            lengthMenu: [[5, 10, 25, 50, 75, 100, 150, 200, -1], [5, 10, 25, 50, 75, 100, 150, 200, "*"]],
        });
    });
</script>