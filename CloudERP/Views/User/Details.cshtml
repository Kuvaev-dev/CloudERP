@model Domain.Models.User

@{
    ViewBag.Title = Localization.CloudERP.User.UserDetails;
}

<div class="form-horizontal">
    <div class="form-group">
        <dl class="col-md-offset-2 col-md-10">
            <dt>
                @Html.Raw(Localization.CloudERP.User.FullName)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.FullName)
            </dd>

            <dt>
                @Html.Raw(Localization.CloudERP.User.EmailAddress)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Email)
            </dd>

            <dt>
                @Html.Raw(Localization.CloudERP.User.ContactNo)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.ContactNo)
            </dd>

            <dt>
                @Html.Raw(Localization.CloudERP.User.UserName)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.UserName)
            </dd>

            <dt>
                @Html.Raw(Localization.CloudERP.User.Status)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.IsActive)
            </dd>

            <dt>
                @Html.Raw(Localization.CloudERP.User.UserType)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.UserTypeName)
            </dd>

        </dl>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            @Html.ActionLink(Localization.CloudERP.Common.Edit, "Edit", new { id = Model.UserID }, new { @class = "btn btn-primary" })
            @Html.ActionLink(Localization.CloudERP.Common.BackToList, "Index", null, new { @class = "btn btn-default" })
        </div>
    </div>
</div>