@model Domain.Models.Supplier

@{
    ViewBag.Title = Resources.Supplier.SupplierDetails;
}

<div class="form-horizontal">
    <div class="col-md-10">
        <dl class="dl-horizontal">
            <dt>
                @Resources.Supplier.SupplierName
            </dt>

            <dd>
                @Html.DisplayFor(model => model.SupplierName)
            </dd>

            <dt>
                @Resources.Supplier.ConatctNo
            </dt>

            <dd>
                @Html.DisplayFor(model => model.SupplierConatctNo)
            </dd>

            <dt>
                @Resources.Supplier.Address
            </dt>

            <dd>
                @Html.DisplayFor(model => model.SupplierAddress)
            </dd>

            <dt>
                @Resources.Supplier.Email
            </dt>

            <dd>
                @Html.DisplayFor(model => model.SupplierEmail)
            </dd>

            <dt>
                @Resources.Supplier.Description
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Discription)
            </dd>

            <dt>
                @Resources.Supplier.BranchTitle
            </dt>

            <dd>
                @Html.DisplayFor(model => model.tblBranch.BranchName)
            </dd>

            <dt>
                @Resources.Supplier.CompanyTitle
            </dt>

            <dd>
                @Html.DisplayFor(model => model.tblCompany.Name)
            </dd>

            <dt>
                @Resources.Supplier.SupplierName
            </dt>

            <dd>
                @Html.DisplayFor(model => model.tblUser.FullName)
            </dd>

        </dl>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            @Html.ActionLink(Resources.Common.Edit, "Edit", new { id = Model.SupplierID }, new { @class="btn btn-primary" })
            @Html.ActionLink(Resources.Common.BackToList, "Index", null, new { @class="btn btn-default" })
        </div>
    </div>
</div>