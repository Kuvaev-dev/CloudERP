@model IEnumerable<Domain.Models.Supplier>
@using Localization.CloudERP.Modules.Supplier
@using Localization.CloudERP.Modules.Miscellaneous
@{
    ViewBag.Title = Supplier.SubBranchSuppliers;
}

<!-- Tables Sorting-->
<script src="https://code.jquery.com/jquery-3.7.0.min.js"></script>

<style>
    #dataTable_filter input[type="search"] {
        width: 15rem;
    }
</style>

<div class="card card-default col-md-12">
    <div class="card-body">
        <div class="table-responsive bootgrid">
            <table class="table table-striped table-bordered table-hover" id="dataTable">
                <thead>
                    <tr>
                        <th>
                            @Supplier.CompanyTitle
                        </th>
                        <th>
                            @Supplier.BranchTitle
                        </th>
                        <th>
                            @Supplier.SupplierName
                        </th>
                        <th>
                            @Supplier.ConatctNo
                        </th>
                        <th>
                            @Localization.CloudERP.Modules.User.User.Email
                        </th>
                        <th>
                            @Supplier.Address
                        </th>
                        <th>
                            @Localization.CloudERP.Modules.User.User.UserName
                        </th>
                        <th>
                            @Miscellaneous.Description
                        </th>
                    </tr>
                </thead>
                <tbody id="SBSupplierList">
                    @if (Model != null)
                    {
                        foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @item.CompanyName)
                                </td>
                                <td>
                                    @item.BranchName)
                                </td>
                                <td>
                                    @item.SupplierName)
                                </td>
                                <td>
                                    @item.SupplierConatctNo)
                                </td>
                                <td>
                                    @item.SupplierEmail)
                                </td>
                                <td>
                                    @item.SupplierAddress)
                                </td>
                                <td>
                                    @item.UserName)
                                </td>
                                <td>
                                    @item.Discription)
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
<script type="text/javascript">
    $(document).ready(function () {
        $('#dataTable').DataTable({
            layout: {
                topStart: {
                    buttons: [
                        { extend: 'copy', className: 'btn btn-secondary', exportOptions: { columns: [0] } },
                        { extend: 'csv', className: 'btn btn-secondary', exportOptions: { columns: [0] } },
                        { extend: 'excel', className: 'btn btn-secondary', exportOptions: { columns: [0] } },
                        { extend: 'pdf', className: 'btn btn-secondary', exportOptions: { columns: [0] } },
                        { extend: 'print', className: 'btn btn-secondary', exportOptions: { columns: [0] } }
                    ]
                },
                topEnd: 'search',
                bottomStart: 'info',
                bottomEnd: 'paging',
                top2Start: 'pageLength'
            },
            lengthMenu: [[5, 10, 25, 50, 75, 100, 150, 200, -1], [5, 10, 25, 50, 75, 100, 150, 200, "*"]],
        });
    });
</script>