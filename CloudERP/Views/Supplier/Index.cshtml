@model IEnumerable<DatabaseAccess.tblSupplier>

@{
    ViewBag.Title = Resources.Suppliers.BranchSuppliers.ToString();
}

<!-- Tables Sorting-->
<link href="https://cdn.datatables.net/1.11.6/css/jquery.dataTables.min.css" rel="stylesheet" />
<script src="~/Scripts/jquery-3.7.1.js"></script>
<script src="https://cdn.datatables.net/1.11.6/js/jquery.dataTables.min.js"></script>

<style>
    #dataTable_filter input[type="search"] {
        width: 15rem;
    }
</style>

<div class="card card-default col-md-12">
    <div class="card-body">
        <div class="table-responsive bootgrid">
            <table class="table table-striped table-bordered table-hover" id="dataTable">
                <thead>
                    <tr>
                        <th>
                            @Resources.Suppliers.CompanyTitle.ToString()
                        </th>
                        <th>
                            @Resources.Suppliers.BranchTitle.ToString()
                        </th>
                        <th>
                            @Resources.Suppliers.SupplierName.ToString()
                        </th>
                        <th>
                            @Resources.Suppliers.ConatctNo.ToString()
                        </th>
                        <th>
                            @Resources.Suppliers.Email.ToString()
                        </th>
                        <th>
                            @Resources.Suppliers.Address.ToString()
                        </th>
                        <th>
                            @Resources.Suppliers.User.ToString()
                        </th>
                        <th>
                            @Resources.Repeats.Actions.ToString()
                        </th>
                    </tr>
                </thead>
                <tbody id="SBSupplierList">
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.tblCompany.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.tblBranch.BranchName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.SupplierName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.SupplierConatctNo)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.SupplierEmail)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.SupplierAddress)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.tblUser.UserName)
                            </td>
                            <td class="btn-group">
                                @Html.ActionLink(Resources.Repeats.Edit.ToString(), "Edit", new { id = item.SupplierID }, new { @class = "btn btn-primary" })
                                @Html.ActionLink(Resources.Repeats.Details.ToString(), "Details", new { id = item.SupplierID }, new { @class = "btn btn-default" })
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
<script type="text/javascript">
    $(document).ready(function () {
        $('#dataTable').DataTable({
            "columnDefs": [{ "orderable": false, "targets": 7 }],
            "lengthMenu": [[5, 10, 25, 50, 75, 100, 150, 200, -1], [5, 10, 25, 50, 75, 100, 150, 200, "All"]],
        });
    });
</script>
