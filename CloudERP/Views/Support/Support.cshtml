@model Domain.Models.SupportTicket

@{
    ViewBag.Title = Resources.Support.ContactSupport;
}

<!-- Tables Sorting-->
<link href="https://cdn.datatables.net/1.11.6/css/jquery.dataTables.min.css" rel="stylesheet" />
<script src="~/Scripts/jQuery/jquery-3.7.1.js"></script>
<script src="https://cdn.datatables.net/1.11.6/js/jquery.dataTables.min.js"></script>

<style>
    #dataTable_filter input[type="search"] {
        width: 15rem;
    }
</style>

@using (Html.BeginForm("SubmitTicket", "Support", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <h3 class="text-danger">@ViewBag.Message</h3>
        <h3 class="text-danger">@ViewBag.ErrorMessage</h3>

        <div class="form-group">
            @Html.LabelFor(m => m.Subject, Resources.Support.Subject, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-5">
                @Html.TextBoxFor(m => m.Subject, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Subject, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Message, Resources.Support.Message, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-5">
                @Html.TextAreaFor(m => m.Message, new { @class = "form-control", rows = 5 })
                @Html.ValidationMessageFor(model => model.Message, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="@Resources.Common.Create.ToString()" class="btn btn-success" />
            </div>
        </div>
    </div>
}

<div class="card card-default col-md-12 mt-4">
    <div class="card-body">
        <h3>My Tickets</h3>
        <div class="table-responsive">
            <table class="table table-striped table-bordered" id="dataTable">
                <thead>
                    <tr>
                        <th>Subject</th>
                        <th>Message</th>
                        <th>Date Created</th>
                        <th>Status</th>
                        <th>Admin Response</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var ticket in ViewBag.UserTickets as IEnumerable<Domain.Models.SupportTicket>)
                    {
                        <tr>
                            <td>@ticket.Subject</td>
                            <td>@ticket.Message</td>
                            <td>@ticket.DateCreated.ToString("g")</td>
                            <td>@(ticket.IsResolved ? "Resolved" : "Pending")</td>
                            <td>@(($"{ticket.RespondedBy}:{ticket.AdminResponse}") ?? "-")</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<script type="text/javascript">
    $(document).ready(function () {
        $('#dataTable').DataTable({
            "columnDefs": [{ "orderable": false, "targets": 4 }],
            "lengthMenu": [[5, 10, 25, 50, 75, 100, 150, 200, -1], [5, 10, 25, 50, 75, 100, 150, 200, "All"]],
        });
    });
</script>