@model DatabaseAccess.Models.BalanceSheetModel
@{
    ViewBag.Title = Resources.Financial.BalanceSheetStr.ToString();
}

<script src="~/Scripts/jquery-3.7.1.js"></script>

@using (Html.BeginForm("GetBalanceSheet", "BalanceSheet", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <div class="card">
        <div class="card card-float">
            <div class="card-body">
                <div class="row">
                    <div class="col-md-4">
                        <label>@Resources.Financial.SelectFinancialYear.ToString()</label>
                        @Html.DropDownList("id", (SelectList)ViewBag.FinancialYears, Resources.Financial.SelectFinancialYear.ToString(), new { @class = "form-control", required = "required" })
                        <input type="submit" value="@Resources.Financial.RetrieveBalanceSheet.ToString()" class="btn btn-success form-control">
                    </div>
                </div>
            </div>
        </div>
    </div>
}

<div class="card card-default col-md-12">
    <div class="card-header">
        <h3 class="text-primary">@Resources.Financial.BalanceSheetStr.ToString()</h3>
        <h3 class="text-danger">@ViewBag.Message</h3>
        <h3 class="text-danger">@ViewBag.ErrorMessage</h3>
    </div>
    <div class="card-body">
        <div class="table-responsive bootgrid">
            <table class="table table-striped table-bordered table-hover" id="dataTable">
                <thead>
                    <tr>
                        <th>@Resources.Financial.AccountTitle.ToString()</th>
                        <th>@Resources.Financial.Amount.ToString()</th>
                        <th>@Resources.Financial.Total.ToString()</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var accountHead in Model.AccountHeadTotals)
                    {
                        <tr style="background-color:lightgray;">
                            <td>@accountHead.AccountHeadTitle</td>
                            <td></td>
                            <td></td>
                        </tr>
                        foreach (var accounts in accountHead.AccountHeadDetails)
                        {
                            <tr>
                                <td>@accounts.AccountSubTitle</td>
                                @if (accounts.Status == "Debit")
                                {
                                    if (accounts.AccountSubTitle.Contains("Assets"))
                                    {
                                        <td>@accounts.TotalAmount</td>
                                    }
                                    else if (accounts.AccountSubTitle.Contains("Liabilities") || accounts.AccountSubTitle.Contains("Capital"))
                                    {
                                        <td>(@accounts.TotalAmount)</td>
                                    }
                                }
                                else
                                {
                                    if (accounts.AccountSubTitle.Contains("Assets"))
                                    {
                                        <td>(@accounts.TotalAmount)</td>
                                    }
                                    else if (accounts.AccountSubTitle.Contains("Liabilities") || accounts.AccountSubTitle.Contains("Capital"))
                                    {
                                        <td>@accounts.TotalAmount</td>
                                    }
                                }
                                <td></td>
                            </tr>
                        }

                        if (accountHead.AccountHeadTitle.Contains("Assets"))
                        {
                            <tr style="background-color:black;color:white;">
                                <td>@Resources.Financial.TotalAssets.ToString():</td>
                                <td></td>
                                <td>@Model.TotalAssets</td>
                            </tr>
                        }
                        else if (accountHead.AccountHeadTitle.Contains("Liabilities"))
                        {
                            <tr style="background-color:lightcyan;color:black;">
                                <td>@Resources.Financial.TotalLiabilities.ToString():</td>
                                <td></td>
                                <td>@accountHead.TotalAmount</td>
                            </tr>
                        }
                        else if (accountHead.AccountHeadTitle.Contains("Capital"))
                        {
                            <tr style="background-color:lightcyan;color:black;">
                                <td>@Resources.Financial.TotalOwnerEquity.ToString():</td>
                                <td></td>
                                <td>@accountHead.TotalAmount</td>
                            </tr>
                        }
                        <tr><td></td><td></td><td></td></tr>
                    }
                    <tr style="background-color:lightcyan;color:black;">
                        <td>@Resources.Financial.TotalReturnEarning.ToString():</td>
                        <td></td>
                        <td>@Model.ReturnEarning</td>
                    </tr>
                    <tr style="background-color:black;color:white;">
                        <td>@Resources.Financial.TotalBalanceLiabilitiesOwnerEquityReturnEarning.ToString():</td>
                        <td></td>
                        <td>@Model.Total_Liabilities_OwnerEquity_ReturnEarning</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
    }
</div>