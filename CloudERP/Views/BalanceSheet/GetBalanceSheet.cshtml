@model DatabaseAccess.Models.BalanceSheetModel
@{
    ViewBag.Title = "Balance Sheet";
}

<script src="~/Scripts/jquery-3.7.1.js"></script>

@using (Html.BeginForm("GetBalanceSheet", "BalanceSheet", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <div class="card">
        <div class="card card-float">
            <div class="card-body">
                <div class="row">
                    <div class="col-md-4">
                        <label>Select Financial Year</label>
                        @Html.DropDownList("id", (SelectList)ViewBag.FinancialYears, "Select Financial Year", new { @class = "form-control", required = "required" })
                        <input type="submit" value="Retrieve Balance Sheet" class="btn btn-success form-control">
                    </div>
                </div>
            </div>
        </div>
    </div>
}

<div class="card card-default col-md-12">
    <div class="card-header">
        <h3 class="text-primary">Balance Sheet</h3>
    </div>
    <div class="card-body">
        <div class="table-responsive bootgrid">
            <table class="table table-striped table-bordered table-hover" id="dataTable">
                <thead>
                    <tr>
                        <th>Account Title</th>
                        <th>Amount</th>
                        <th>Total</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var accountHead in Model.AccountHeadTotals)
                    {
                        <tr style="background-color:lightgray;">
                            <td>@accountHead.AccountHeadTitle</td>
                            <td></td>
                            <td></td>
                        </tr>
                        foreach (var accounts in accountHead.AccountHeadDetails)
                        {
                            <tr>
                                <td>@accounts.AccountSubTitle</td>
                                @if (accounts.Status == "Debit")
                                {
                                    if (accounts.AccountSubTitle.Contains("Assets"))
                                    {
                                        <td>@accounts.TotalAmount</td>
                                    }
                                    else if (accounts.AccountSubTitle.Contains("Liabilities") || accounts.AccountSubTitle.Contains("Capital"))
                                    {
                                        <td>(@accounts.TotalAmount)</td>
                                    }
                                }
                                else
                                {
                                    if (accounts.AccountSubTitle.Contains("Assets"))
                                    {
                                        <td>(@accounts.TotalAmount)</td>
                                    }
                                    else if (accounts.AccountSubTitle.Contains("Liabilities") || accounts.AccountSubTitle.Contains("Capital"))
                                    {
                                        <td>@accounts.TotalAmount</td>
                                    }
                                }
                                <td></td>
                            </tr>
                        }

                        if (accountHead.AccountHeadTitle.Contains("Assets"))
                        {
                            <tr style="background-color:black;color:white;">
                                <td>Total Assets:</td>
                                <td></td>
                                <td>@Model.TotalAssets</td>
                            </tr>
                        }
                        else if (accountHead.AccountHeadTitle.Contains("Liabilities"))
                        {
                            <tr style="background-color:lightcyan;color:black;">
                                <td>Total Liabilities:</td>
                                <td></td>
                                <td>@accountHead.TotalAmount</td>
                            </tr>
                        }
                        else if (accountHead.AccountHeadTitle.Contains("Capital"))
                        {
                            <tr style="background-color:lightcyan;color:black;">
                                <td>Total Owner Equity:</td>
                                <td></td>
                                <td>@accountHead.TotalAmount</td>
                            </tr>
                        }
                        <tr><td></td><td></td><td></td></tr>
                    }
                    <tr style="background-color:lightcyan;color:black;">
                        <td>Total Return Earning</td>
                        <td></td>
                        <td>@Model.ReturnEarning</td>
                    </tr>
                    <tr style="background-color:black;color:white;">
                        <td>Total Balance (Liabilities + Owner Equity + Return Earning)</td>
                        <td></td>
                        <td>@Model.Total_Liabilities_OwnerEquity_ReturnEarning</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
    }
