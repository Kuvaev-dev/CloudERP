@model IEnumerable<DatabaseAccess.Models.PurchasePaymentModel>

@{
    ViewBag.Title = Resources.Miscellaneous.PurchasesPaymentPending.ToString();
}

<!-- Tables Sorting-->
<link href="https://cdn.datatables.net/1.11.6/css/jquery.dataTables.min.css" rel="stylesheet" />
<script src="~/Scripts/jquery-3.7.1.js"></script>
<script src="https://cdn.datatables.net/1.11.6/js/jquery.dataTables.min.js"></script>

<style>
    #dataTable_filter input[type="search"] {
        width: 15rem;
    }
</style>

<div class="card card-default col-md-12">
    <div class="card-header">
        <h5 style="float:left;">@Session["Message"]</h5>
    </div>
    <div class="card-body">
        <div class="table-responsive bootgrid">
            <table class="table table-striped table-bordered table-hover" id="dataTable">
                <thead>
                    <tr>
                        <th>
                            @Resources.Miscellaneous.Supplier.ToString()
                        </th>
                        <th>
                            @Resources.Miscellaneous.InvoiceNo.ToString()
                        </th>
                        <th>
                            @Resources.Miscellaneous.Date.ToString()
                        </th>
                        <th>
                            @Resources.Miscellaneous.TotalAmount.ToString()
                        </th>
                        <th>
                            @Resources.Miscellaneous.ReturnProductsTotalAmount.ToString()
                        </th>
                        <th>
                            @Resources.Miscellaneous.AmountAfterReturn.ToString()
                        </th>
                        <th>
                            @Resources.Miscellaneous.PaidAmount.ToString()
                        </th>
                        <th>
                            @Resources.Miscellaneous.PaymentAmount.ToString()
                        </th>
                        <th>
                            @Resources.Miscellaneous.RemainingBalance.ToString()
                        </th>
                        <th>
                            @Resources.Repeats.Actions.ToString()
                        </th>
                    </tr>
                </thead>
                <tbody id="paymentList">
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.ActionLink(item.SupplierName, "SupplierDetails", "Supplier", new { id = item.SupplierID }, null)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.InvoiceNo)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.InvoiceDate)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.TotalAmount)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ReturnProductAmount)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.AfterReturnTotalAmount)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.PaymentAmount)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ReturnPaymentAmount)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.RemainingBalance)
                            </td>
                            <td>
                                @if (item.TotalAmount - 1 > item.PaymentAmount)
                                {
                                    @Html.ActionLink(Resources.Miscellaneous.PayAmount.ToString(), "PaidAmount", new { id = item.SupplierInvoiceID }, new { @class = "btn btn-primary" });
                                }
                                @if (item.PaymentAmount > 0)
                                {
                                    @Html.ActionLink(Resources.Miscellaneous.PayHistory.ToString(), "PaidHistory", new { id = item.SupplierInvoiceID }, new { @class = "btn btn-info" });
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
<script type="text/javascript">
    $(document).ready(function () {
        $('#dataTable').DataTable({
            "lengthMenu": [[5, 10, 25, 50, 75, 100, 150, 200, -1], [5, 10, 25, 50, 75, 100, 150, 200, "All"]],
        });
    });
</script>