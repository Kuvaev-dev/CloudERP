@model IEnumerable<Domain.Models.PurchaseInfo>
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor

@{
    ViewBag.Title = Localization.CloudERP.Miscellaneous.PurchasesPaymentPending;
}

<!-- Tables Sorting-->
<script src="https://code.jquery.com/jquery-3.7.0.min.js"></script>
<link href="https://cdn.datatables.net/v/bs5/dt-2.2.2/datatables.min.css" rel="stylesheet">
<script src="https://cdn.datatables.net/v/bs5/dt-2.2.2/datatables.min.js"></script>

<style>
    #dataTable_filter input[type="search"] {
        width: 15rem;
    }
</style>

<div class="card card-default col-md-12">
    <div class="card-header">
        <h5 style="float:left;">@HttpContextAccessor.HttpContext?.Session.GetString("Message")</h5>
    </div>
    <div class="card-body">
        <div class="table-responsive bootgrid">
            <table class="table table-striped table-bordered table-hover" id="dataTable">
                <thead>
                    <tr>
                        <th>
                            @Localization.CloudERP.Supplier.SupplierName
                        </th>
                        <th>
                            @Localization.CloudERP.Miscellaneous.InvoiceNo
                        </th>
                        <th>
                            @Localization.CloudERP.Miscellaneous.Date
                        </th>
                        <th>
                            @Localization.CloudERP.Sale.TotalAmount
                        </th>
                        <th>
                            @Localization.CloudERP.Purchase.ReturnProductsTotalAmount
                        </th>
                        <th>
                            @Localization.CloudERP.Purchase.AmountAfterReturn
                        </th>
                        <th>
                            @Localization.CloudERP.Sale.PaidAmount
                        </th>
                        <th>
                            @Localization.CloudERP.Purchase.PaymentAmount
                        </th>
                        <th>
                            @Localization.CloudERP.Sale.RemainingBalance
                        </th>
                        <th>
                            @Localization.CloudERP.Common.Actions
                        </th>
                    </tr>
                </thead>
                <tbody id="paymentList">
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.SupplierName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.InvoiceNo)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.InvoiceDate.ToString("MM:dd:yyyy"))
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.TotalAmount)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ReturnProductAmount)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.AfterReturnTotalAmount)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.PaymentAmount)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ReturnPaymentAmount)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.RemainingBalance)
                            </td>
                            <td class="btn-group">
                                @if (item.TotalAmount - 1 > item.PaymentAmount)
                                {
                                    @Html.ActionLink(Localization.CloudERP.Purchase.PayAmount, "PaidAmount", new { id = item.SupplierInvoiceID }, new { @class = "btn btn-primary" });
                                }
                                @if (item.PaymentAmount > 0)
                                {
                                    @Html.ActionLink(Localization.CloudERP.Sale.PayHistory, "PaidHistory", new { id = item.SupplierInvoiceID }, new { @class = "btn btn-info" });
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
<script type="text/javascript">
    $(document).ready(function () {
        $('#dataTable').DataTable({
            "lengthMenu": [[5, 10, 25, 50, 75, 100, 150, 200, -1], [5, 10, 25, 50, 75, 100, 150, 200, "All"]],
        });
    });
</script>