@model IEnumerable<DatabaseAccess.tblSupplierInvoiceDetail>

@{
    ViewBag.Title = "Purchase Details";
}

<table class="table table-hover">
    <tr>
        <th>
            Invoice №
        </th>
        <th>
            Product
        </th>
        <th>
            Quantity
        </th>
        <th>
            Unit Price
        </th>
        <th>
            Item Cost
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.tblSupplierInvoice.InvoiceNo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.tblStock.ProductName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PurchaseQuantity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PurchaseUnitPrice)
            </td>
            <td>
                <label>@(item.PurchaseQuantity * item.PurchaseUnitPrice)</label>
            </td>
        </tr>
    }

</table>
