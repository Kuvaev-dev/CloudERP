@model IEnumerable<Domain.Models.FinancialModels.PurchasePaymentModel>
@{
    double remainingBalance = 0;
    ViewBag.Title = Resources.Purchase.PurchasePayment.ToString();
}

<script src="~/Scripts/jQuery/jquery-3.7.1.js"></script>

<div class="card">
    <div class="card card-flat">
        <div class="card-header">
            <h4>@Resources.Purchase.EnterPaymentsDetails.ToString()</h4>
            <h3 class="text-danger">@ViewBag.Message</h3>
            <h3 class="text-danger">@ViewBag.ErrorMessage</h3>
        </div>
        <div class="card-body">
            @using (Html.BeginForm("PaidAmount", "PurchasePayment", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                <input type="text" value="@ViewBag.InvoiceID" id="id" name="id" style="display:none;" />
                <div class="row">
                    <div class="col-md-4">
                        <label>@Resources.Purchase.PreviousRemainingAmount.ToString()</label>
                        <input type="text" id="previousRemainingAmount" name="previousRemainingAmount" value="@remainingBalance" readonly="readonly" class="form-control" required>
                    </div>
                    <div class="col-md-4">
                        <label>@Resources.Purchase.PaymentAmount.ToString()</label>
                        <input min="0" type="number" id="paymentAmount" name="paymentAmount" value="10" class="form-control" required>
                    </div>
                    <div class="col-md-4">
                        <label>@Resources.Purchase.CurrentRemainingAmount.ToString()</label>
                        <input type="text" id="remainingAmount" name="remainingAmount" value="10" readonly="readonly" class="form-control" required>
                    </div>
                </div>
                <br />
                <br />
                <input type="submit" value="@Resources.Purchase.SubmitPayment.ToString()" class="btn btn-success" style="float: right;">
            }
        </div>
    </div>
</div>

<div class="card card-default col-md-12">
    <div class="card-header">
        <h4 style="float:left;">@Resources.Purchase.PurchaseInvoicePaymentDetail.ToString()</h4>
    </div>
    <div class="card-body">
        <div class="table-responsive bootgrid">
            <table class="table table-hover" id="dataTable">
                <thead>
                    <tr>
                        <th>
                            @Resources.Supplier.SupplierName.ToString()
                        </th>
                        <th>
                            @Resources.Miscellaneous.ContactNo.ToString()
                        </th>
                        <th>
                            @Resources.Miscellaneous.InvoiceNo.ToString()
                        </th>
                        <th>
                            @Resources.Miscellaneous.Date.ToString()
                        </th>
                        <th>
                            @Resources.Purchase.TotalAmount.ToString()
                        </th>
                        <th>
                            @Resources.Purchase.PaidAmount.ToString()
                        </th>
                        <th>
                            @Resources.Purchase.RemainingBalance.ToString()
                        </th>
                    </tr>
                </thead>
                <tbody id="paymentList">
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.SupplierName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.SupplierContactNo)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.InvoiceNo)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.InvoiceDate)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.TotalAmount)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.PaymentAmount)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.RemainingBalance)
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@{
    double totalReturnRemainingBalance = 0;
    int noOfInvoice = 0;

    if (ViewData["ReturnPurchaseDetails"] != null)
    {
        <h3>@Resources.Purchase.PurchaseReturnDetails.ToString()</h3>
        var returnPurchaseDetail = ViewData["ReturnPurchaseDetails"] as List<Domain.Models.SupplierReturnInvoice>;
        foreach (var item in returnPurchaseDetail)
        {
            noOfInvoice += 1;
            double invoiceRemainingBalance = 0;
            double payAmount = item.SupplierReturnPayment.Sum(s => s.PaymentAmount);
            invoiceRemainingBalance = item.TotalAmount - payAmount;
            totalReturnRemainingBalance += invoiceRemainingBalance;

            <div class="row todo">
                <div class="col-lg-12 todo-item-list">
                    <div id="accordion" role="tablist" aria-multiselectable="true">
                        <div class="card mb-0 todo-item">
                            <div class="card-header">
                                <p class="text-bold mb-0">
                                    <div class="clickable collapsed" data-toggle="collapse" data-parent="#accordion" data-target="#collapseTwo_@noOfInvoice">
                                        <div class="row">
                                            <div class="col-md-1">
                                                <div>
                                                    @Resources.Supplier.SupplierName.ToString():
                                                    <div>
                                                        @item.SupplierName
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-md-2">
                                                <div>
                                                    @Resources.Purchase.InvoiceDate.ToString():
                                                    <div>
                                                        @item.InvoiceDate
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-md-2">
                                                <div>
                                                    @Resources.Miscellaneous.InvoiceNo.ToString():
                                                    <div>
                                                        @item.InvoiceNo
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-md-2">
                                                <div>
                                                    @Resources.Purchase.ReturnTotal.ToString():
                                                    <div>
                                                        @item.TotalAmount
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-md-2">
                                                <div>
                                                    @Resources.Purchase.ReturnPayment.ToString():
                                                    <div>
                                                        @payAmount
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-md-3">
                                                <div>
                                                    @Resources.Purchase.RemainingReturn.ToString():
                                                    <div>
                                                        @invoiceRemainingBalance
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </p>
                            </div>
                            <div class="collapse" id="collapseTwo_@noOfInvoice">
                                <div class="card-body">
                                    <div class="table-responsive bootgrid">
                                        @if (payAmount > 0)
                                        {
                                            <table class="table table-hover" id="dataTable">
                                                <thead>
                                                    <tr>
                                                        <th>
                                                            @Resources.Miscellaneous.InvoiceNo.ToString()
                                                        </th>
                                                        <th>
                                                            @Resources.Purchase.PaymentDate.ToString()
                                                        </th>
                                                        <th>
                                                            @Resources.Purchase.TotalAmount.ToString()
                                                        </th>
                                                        <th>
                                                            @Resources.Purchase.PaymentAmount.ToString()
                                                        </th>
                                                        <th>
                                                            @Resources.Purchase.RemainingBalance.ToString()
                                                        </th>
                                                    </tr>
                                                </thead>
                                                <tbody id="paymentList">
                                                    @foreach (var paymentDetails in item.SupplierReturnPayment)
                                                    {
                                                        <tr>
                                                            <td>
                                                                @paymentDetails.InvoiceNo
                                                            </td>
                                                            <td>
                                                                @paymentDetails.InvoiceDate
                                                            </td>
                                                            <td>
                                                                @paymentDetails.TotalAmount
                                                            </td>
                                                            <td>
                                                                @paymentDetails.PaymentAmount
                                                            </td>
                                                            <td>
                                                                @paymentDetails.RemainingBalance
                                                            </td>
                                                        </tr>
                                                    }
                                                </tbody>
                                            </table>
                                        }
                                        else
                                        {
                                            <div class="text-center">
                                                @Resources.Purchase.NoPaymentRecord.ToString()
                                            </div>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <br />

        }
    }
    remainingBalance = ((double)ViewBag.PreviousRemainingAmount - totalReturnRemainingBalance);
}

<div class="row">
    <div class="col-lg-6"></div>
    <div class="col-lg-6 py-2">
        <div class="row mb-3 align-items-center">
            <div class="col-7">
                <div class="h3">@Resources.Purchase.RemainingTotalBalance.ToString(): </div>
            </div>
            <div class="col-5">
                <div id="previousRemainingAmounts" class="text-left h3">@remainingBalance.ToString("F2")</div>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
    $(document).ready(function () {
        $('#dataTable').DataTable({
            "columnDefs": [{ "orderable": false, "targets": 3 }],
            "lengthMenu": [[5, 10, 25, 50, 75, 100, 150, 200, -1], [5, 10, 25, 50, 75, 100, 150, 200, "All"]],
        });
        
        $("#previousRemainingAmount").val(@remainingBalance);
        $("#paymentAmount").max(@remainingBalance);

        $("#paymentAmount").keyup(function () {
            var previousRemainingAmount = $("#previousRemainingAmounts").val();
            var payment = this.value;
            $("#remainingAmount").val(previousRemainingAmount - payment);
        })
    })
</script>
