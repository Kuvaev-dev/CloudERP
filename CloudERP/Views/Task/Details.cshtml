@model DatabaseAccess.tblTask

@{
    ViewBag.Title = Resources.Task.TaskDetails.ToString();
}

<div class="form-horizontal">
    <div class="col-md-10">
        <dl class="dl-horizontal">
            <dt>
                @Resources.Task.TaskTitle.ToString()
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Title)
            </dd>

            <dt>
                @Resources.Task.DueDate.ToString()
            </dt>

            <dd>
                @Html.DisplayFor(model => model.DueDate)
            </dd>

            <dt>
                @Resources.Task.ReminderDate.ToString()
            </dt>

            <dd>
                @Html.DisplayFor(model => model.ReminderDate)
            </dd>

            <dt>
                @Resources.Task.IsCompleted.ToString()
            </dt>

            <dd>
                @Html.DisplayFor(model => model.IsCompleted)
            </dd>
        </dl>
        <div class="form-group">
            <div class="col-md-offset-2">
                @Html.ActionLink(Resources.Repeats.Edit.ToString(), "Edit", new { id = Model.TaskID }, new { @class = "btn btn-primary" })
                @Html.ActionLink(Resources.Repeats.BackToList.ToString(), "Index", null, new { @class = "btn btn-default" })
            </div>
        </div>
    </div>
</div>