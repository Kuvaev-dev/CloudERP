@model Domain.Models.TaskModel

@{
    ViewBag.Title = Resources.Task.DeleteTask.ToString();
}

@using (Html.BeginForm("Delete", "Task", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.TaskID)

    <div class="form-horizontal">
        <div class="col-md-10">
            <h2>@Resources.Task.AreYouSureYouWantToDeleteThisTask.ToString()</h2>

            <dl class="dl-horizontal">
                <div class="form-group">
                    <dt>@Resources.Task.TaskTitle.ToString()</dt>
                    <dd class="form-control-static">@Model.Title</dd>
                </div>

                <div class="form-group">
                    <dt>@Resources.Task.Description.ToString()</dt>
                    <dd class="form-control-static">@Model.Description</dd>
                </div>

                <div class="form-group">
                    <dt>@Resources.Task.DueDate.ToString()</dt>
                    <dd class="form-control-static">@Model.DueDate.ToString("g")</dd>
                </div>

                <div class="form-group">
                    <dt>@Resources.Task.ReminderDate.ToString()</dt>
                    <dd class="form-control-static">@Model.ReminderDate</dd>
                </div>

                <div class="form-group">
                    <dt>@Resources.Task.IsCompleted.ToString()</dt>
                    <dd class="form-control-static">@Model.IsCompleted</dd>
                </div>
            </dl>
            <div class="form-group">
                <input type="submit" value="@Resources.Common.Delete.ToString()" class="btn btn-danger" />
                @Html.ActionLink(Resources.Common.BackToList.ToString(), "Index", null, new { @class = "btn btn-default" })
            </div>
        </div>
    </div>
}