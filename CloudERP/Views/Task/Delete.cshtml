@model Domain.Models.TaskModel

@{
    ViewBag.Title = Localization.CloudERP.Task.DeleteTask;
}

@using (Html.BeginForm("Delete", "Task", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.TaskID)

    <div class="form-horizontal">
        <div class="col-md-10">
            <h2>@Localization.CloudERP.Task.AreYouSureYouWantToDeleteThisTask</h2>

            <dl class="dl-horizontal">
                <div class="form-group">
                    <dt>@Localization.CloudERP.Task.TaskTitle</dt>
                    <dd class="form-control-static">@Model.Title</dd>
                </div>

                <div class="form-group">
                    <dt>@Localization.CloudERP.Task.Description</dt>
                    <dd class="form-control-static">@Model.Description</dd>
                </div>

                <div class="form-group">
                    <dt>@Localization.CloudERP.Task.DueDate</dt>
                    <dd class="form-control-static">@Model.DueDate.ToString("g")</dd>
                </div>

                <div class="form-group">
                    <dt>@Localization.CloudERP.Task.ReminderDate</dt>
                    <dd class="form-control-static">@Model.ReminderDate</dd>
                </div>

                <div class="form-group">
                    <dt>@Localization.CloudERP.Task.IsCompleted</dt>
                    <dd class="form-control-static">@Model.IsCompleted</dd>
                </div>
            </dl>
            <div class="form-group">
                <input type="submit" value="@Localization.CloudERP.Common.Delete" class="btn btn-danger" />
                @Html.ActionLink(Localization.CloudERP.Common.BackToList, "Index", null, new { @class = "btn btn-default" })
            </div>
        </div>
    </div>
}