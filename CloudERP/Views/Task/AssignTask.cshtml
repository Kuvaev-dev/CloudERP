@model Domain.Models.TaskModel

@{
    ViewBag.Title = "Assign Task To Employee";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <h2 class="text-danger">@ViewBag.Message</h2>
        <h2 class="text-danger">@ViewBag.ErrorMessage</h2>

        <div class="form-group">
            @Html.LabelFor(m => m.Title, "Task Title", htmlAttributes: new { @class = "control-label col-md-4" })
            <div class="col-md-5">
                @Html.TextBoxFor(m => m.Title, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Title, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Description, "Task Title", htmlAttributes: new { @class = "control-label col-md-4" })
            <div class="col-md-5">
                @Html.TextAreaFor(m => m.Description, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Description, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.DueDate, "Due Date", htmlAttributes: new { @class = "control-label col-md-4" })
            <div class="col-md-5">
                @Html.TextBoxFor(m => m.DueDate, "{0:yyyy-MM-dd}", new { @type = "date", @class = "form-control" })
                @Html.ValidationMessageFor(m => m.DueDate, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.AssignedToUserID, "Assign Task To", new { @class = "control-label col-md-4" })
            <div class="col-md-5">
                @Html.DropDownListFor(
                    m => m.AssignedToUserID,
                    new SelectList(ViewBag.Employees, "UserID", "FullName"),
                    "-- Select an Employee --",
                    new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.AssignedToUserID, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="@Resources.Common.Save.ToString()" class="btn btn-success" />
                <button id="voiceRecognitionButton" class="btn btn-link" type="button">
                    <i class="fas fa-microphone" style="font-size: 1.5em; color: gray;"></i>
                </button>
            </div>
        </div>
    </div>
}
