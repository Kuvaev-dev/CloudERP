@model IEnumerable<DatabaseAccess.tblTask>

@{
    ViewBag.Title = "Tasks List";
}

<!-- Tables Sorting-->
<link href="https://cdn.datatables.net/1.11.6/css/jquery.dataTables.min.css" rel="stylesheet" />
<script src="~/Scripts/jquery-3.7.1.js"></script>
<script src="https://cdn.datatables.net/1.11.6/js/jquery.dataTables.min.js"></script>

<style>
    #dataTable_filter input[type="search"] {
        width: 15rem;
    }
</style>

<div class="card card-default col-md-12">
    <div class="card-header">
        @Html.ActionLink("Add Task", "Create", "Task", null, new { @style = "float:left;", @class = "btn btn-success" })
        <h3 class="text-danger">@ViewBag.Message</h3>
        <h3 class="text-danger">@ViewBag.ErrorMessage</h3>
    </div>
    <div class="card-body">
        <div class="table-responsive bootgrid">
            <table class="table table-striped table-bordered table-hover" id="dataTable">
                <thead>
                    <tr>
                        <th>Title</th>
                        <th>Description</th>
                        <th>Due Date</th>
                        <th>Reminder Date</th>
                        <th>Is Completed</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody id="tasksList">
                    @foreach (var task in Model)
                    {
                        <tr>
                            <td>@task.Title</td>
                            <td>@task.Description</td>
                            <td>@task.DueDate</td>
                            <td>@task.ReminderDate</td>
                            <td>@task.IsCompleted</td>
                            <td class="btn-group">
                                <a href="@Url.Action("Edit", new { id = task.TaskID })" class="btn btn-primary btn-sm">Edit</a>
                                <a href="@Url.Action("Details", new { id = task.TaskID })" class="btn btn-info btn-sm">Details</a>
                                <a href="@Url.Action("Delete", new { id = task.TaskID })" class="btn btn-danger btn-sm">Delete</a>
                                <a href="@Url.Action("Complete", new { id = task.TaskID })" class="btn btn-success btn-sm">Complete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
<script type="text/javascript">
    $(document).ready(function () {
        $('#dataTable').DataTable({
            "columnDefs": [{ "orderable": false, "targets": 2 }],
            "lengthMenu": [[5, 10, 25, 50, 75, 100, 150, 200, -1], [5, 10, 25, 50, 75, 100, 150, 200, "All"]],
        });
    });
</script>