@model DatabaseAccess.tblAccountControl

@{
    ViewBag.Title = Resources.AccountControl.NewAccountControl.ToString();
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @ViewBag.Message
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            @Html.LabelFor(model => model.AccountHeadID, Resources.AccountControl.SelectAccountHead.ToString(), htmlAttributes: new { @class = "control-label col-md-4" })
            <div class="col-md-5">
                @Html.DropDownList("AccountHeadID", null, Resources.AccountControl.AccountHeadTitle.ToString(), htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.AccountHeadID, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.AccountControlName, Resources.AccountControl.AccountControlTitle.ToString(), htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-5">
                @Html.EditorFor(model => model.AccountControlName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.AccountControlName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="@Resources.Repeats.Create.ToString()" class="btn btn-success" />
                @Html.ActionLink(@Resources.Repeats.BackToList.ToString(), "Index", null, new { @class="btn btn-default" })
            </div>
        </div>
    </div>
}
