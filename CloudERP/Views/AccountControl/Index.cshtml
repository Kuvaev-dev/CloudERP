@model IEnumerable<AccountControlMV>
@using CloudERP.Models

@{
    ViewBag.Title = "All Account Controls";
}

<script src="~/Scripts/jquery-3.7.1.js"></script>

<div class="card card-default col-md-12">
    <div class="card-header">
        @Html.ActionLink("Add Account Control", "Create", null, new { @style = "float:left;", @class = "btn btn-success" })
        <input class="form-control col-md-3" style="float:right;" type="text" id="searchAccountControl" name="searchAccountControl" placeholder="Search..." />
    </div>
    <div class="card-body">
        <div class="table-responsive bootgrid">
            <table class="table table-striped table-bordered table-hover" id="dataTable">
                <thead>
                    <tr>
                        <th>
                            Account Head
                        </th>
                        <th>
                            Account Control
                        </th>
                        <th>
                            User
                        </th>
                        <th>
                            Actions
                        </th>
                    </tr>
                </thead>
                <tbody id="accountControlList">
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.AccountHeadName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.AccountControlName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.UserName)
                            </td>
                            <td>
                                @Html.ActionLink("Edit", "Edit", new { id = item.AccountControlID }, new { @class = "btn btn-primary" })
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
<script type="text/javascript">
    $(document).ready(function () {
        $("#searchAccountControl").on("keyup", function () {
            var value = $(this).val().toLowerCase();
            $("#accountControlList tr").filter(function () {
                $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
            })
        })
    })
</script>
