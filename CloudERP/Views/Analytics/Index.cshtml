@model Domain.Models.AnalyticsModel
@{
    ViewBag.Title = Localization.CloudERP.Miscellaneous.SystemAnalytics;
}

<div class="container mt-4">
    <div class="row mb-4">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header bg-primary text-white">@Localization.CloudERP.Miscellaneous.UsersActivity</div>
                <div class="card-body">
                    <canvas id="usersChart" width="400" height="200"></canvas>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card">
                <div class="card-header bg-info text-white">@Localization.CloudERP.Miscellaneous.Stocks</div>
                <div class="card-body">
                    <canvas id="stockChart" width="400" height="200"></canvas>
                </div>
            </div>
        </div>
    </div>

    <div class="row mb-4">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header bg-success text-white">@Localization.CloudERP.Miscellaneous.Support</div>
                <div class="card-body">
                    <canvas id="supportChart" width="400" height="200"></canvas>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
    const chartData = @Html.Raw(Newtonsoft.Json.JsonConvert.SerializeObject(ViewBag.ChartData));

    // Users
    const usersCtx = document.getElementById('usersChart').getContext('2d');
    new Chart(usersCtx, {
        type: 'polarArea',
        options: {
            responsive: true
        },
        data: {
            labels: [
                '@Localization.CloudERP.Common.All', 
                '@Localization.CloudERP.Common.NewInAMonth', 
                '@Localization.CloudERP.Common.New'
            ],
            datasets: [{
                label: '@Localization.CloudERP.Miscellaneous.Users',
                data: [chartData.Employees.Total, chartData.Employees.NewInAMonth, chartData.Employees.NewInAYear],
                backgroundColor: ['#007bff', '#28a745', '#ffc107']
            }]
        }
    });

    // Stock
    const stockCtx = document.getElementById('stockChart').getContext('2d');
    new Chart(stockCtx, {
        type: 'polarArea',
        options: {
            responsive: true
        },
        data: {
            labels: ['@Localization.CloudERP.Common.All', '@Localization.CloudERP.Common.InStock'],
            datasets: [{
                label: '@Localization.CloudERP.Miscellaneous.Stocks',
                data: [chartData.Stock.TotalItems, chartData.Stock.Available, chartData.Stock.Expired],
                backgroundColor: ['#17a2b8', '#6c757d']
            }]
        }
    });

    // Support
    const supportCtx = document.getElementById('supportChart').getContext('2d');
    new Chart(supportCtx, {
        type: 'polarArea',
        options: {
            responsive: true
        },
        data: {
            labels: [
                '@Localization.CloudERP.Common.All', 
                '@Localization.CloudERP.Common.Resolved', 
                '@Localization.CloudERP.Common.Pending'
            ],
            datasets: [{
                label: '@Localization.CloudERP.Miscellaneous.Support',
                data: [chartData.Support.TotalTickets, chartData.Support.Resolved, chartData.Support.Pending],
                backgroundColor: ['#6c757d', '#28a745', '#ffc107']
            }]
        }
    });
</script>