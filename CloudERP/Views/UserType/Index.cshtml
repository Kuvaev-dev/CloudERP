@model IEnumerable<DatabaseAccess.tblUserType>

@{
    ViewBag.Title = "Index";
}

<script src="~/Scripts/jquery-3.7.1.js"></script>

<div class="card card-default col-md-12">
    <div class="card-header">
        @Html.ActionLink("Add User Type", "Create", null, new { @style = "float:left;", @class = "btn btn-primary" })
        <input class="form-control col-md-3" style="float:right;" type="text" id="searchUserType" name="searchUserType" placeholder="Search..." />
    </div>
    <div class="card-body">
        <div class="table-responsive bootgrid">
            <table class="table table-striped table-bordered table-hover" id="dataTable">
                <thead>
                    <tr>
                        <th>
                            User Type
                        </th>
                        <th>
                            Actions
                        </th>
                    </tr>
                </thead>
                <tbody id="userTypeList">
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                <p>@Html.DisplayFor(modelItem => item.UserType)</p>
                            </td>
                            <td>
                                @Html.ActionLink("Edit", "Edit", new { id = item.UserTypeID }, new { @class = "btn btn-primary" })
                                @Html.ActionLink("Details", "Details", new { id = item.UserTypeID }, new { @class = "btn btn-info" })
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
<script type="text/javascript">
    $(document).ready(function () {
        $("#searchUserType").on("keyup", function () {
            var value = $(this).val().toLowerCase();
            $("#userTypeList tr").filter(function () {
                $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
            })
        })
    })
</script>

