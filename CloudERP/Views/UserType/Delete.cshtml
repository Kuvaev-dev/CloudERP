@model DatabaseAccess.tblUserType

@{
    ViewBag.Title = Resources.Account.Delete.ToString();
}

<h3>Are you sure you want to delete this?</h3>
<div>
    <dl class="dl-horizontal">
        <dt>
            @Resources.Account.UserType.ToString()
        </dt>

        <dd>
            @Html.DisplayFor(model => model.UserType)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="@Resources.Common.Delete.ToString()" class="btn btn-default" /> |
            @Html.ActionLink(Resources.Common.BackToList.ToString(), "Index")
        </div>
    }
</div>
