@model Domain.Models.Employee

@{
    ViewBag.Title = Localization.CloudERP.Company.EmployeeProfile;
}

<div class="form-horizontal">
    <div class="col-md-10">
        <dl class="dl-horizontal">
            <dt>
                @Html.Raw(Localization.CloudERP.User.FullName)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.FullName)
            </dd>

            <dt>
                @Html.Raw(Localization.CloudERP.User.ContactNo)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.ContactNumber)
            </dd>

            <dt>
                @Html.Raw(Localization.CloudERP.Miscellaneous.Photo)
            </dt>

            <dd>
                @if (!string.IsNullOrEmpty(Model.Photo))
                {
                    <img src="@Url.Content(Model.Photo)" alt="image" style="width:50px;height:50px;max-width:100%;height:auto;" />
                }
            </dd>

            <dt>
                @Html.Raw(Localization.CloudERP.User.EmailAddress)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Email)
            </dd>

            <dt>
                @Html.Raw(Localization.CloudERP.User.Address)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Address)
            </dd>

            <dt>
                @Html.Raw(Localization.CloudERP.User.TIN)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.TIN)
            </dd>

            <dt>
                @Html.Raw(Localization.CloudERP.User.Designation)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Designation)
            </dd>

            <dt>
                @Html.Raw(Localization.CloudERP.Company.Description)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Description)
            </dd>

            <dt>
                @Html.Raw(Localization.CloudERP.Company.BasicSalary)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.MonthlySalary)
            </dd>

            <dt>
                @Html.Raw(Localization.CloudERP.Branch.BranchName)
            </dt>

            <dt>
                @Html.DisplayFor(model => model.BranchName)
            </dt>
        </dl>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            @Html.ActionLink(Localization.CloudERP.Company.EditProfile, "EmployeeUpdation", new { id = Model.EmployeeID }, new { @class = "btn btn-primary" })
            @Html.ActionLink(Localization.CloudERP.Common.BackToList, "Employee", null, new { @class = "btn btn-default" })
        </div>
    </div>
</div>
