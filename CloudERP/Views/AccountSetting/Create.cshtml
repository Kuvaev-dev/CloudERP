@model CloudERP.Models.AccountSettingMV

@{
    ViewBag.Title = Resources.Account.NewAccountSetting.ToString();
}

<script src="~/Scripts/jquery-3.7.1.js"></script>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h2 class="text-danger">@ViewBag.Message</h2>
        <h2 class="text-danger">@ViewBag.ErrorMessage</h2>

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            @Html.LabelFor(model => model.AccountHeadID, Resources.Account.SelectHeadAccount.ToString(), htmlAttributes: new { @class = "control-label col-md-4" })
            <div class="col-md-5">
                @Html.DropDownList("AccountHeadID", null, Resources.Account.HeadAccount.ToString(), htmlAttributes: new { @class = "form-control", @id = "AccountHeadID" })
                @Html.ValidationMessageFor(model => model.AccountHeadID, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.AccountControlID, Resources.Account.SelectControlAccount.ToString(), htmlAttributes: new { @class = "control-label col-md-4" })
            <div class="col-md-5">
                @Html.DropDownList("AccountControlID", null, Resources.Account.ControlAccount.ToString(), htmlAttributes: new { @class = "form-control", @id = "AccountControlID" })
                @Html.ValidationMessageFor(model => model.AccountControlID, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.AccountSubControlID, Resources.Account.SelectSubControlAccount.ToString(), htmlAttributes: new { @class = "control-label col-md-4" })
            <div class="col-md-5">
                @Html.DropDownList("AccountSubControlID", null, Resources.Account.SubAccount.ToString(), htmlAttributes: new { @class = "form-control", @id = "AccountSubControlID" })
                @Html.ValidationMessageFor(model => model.AccountSubControlID, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.AccountActivityID, Resources.Account.SelectActivity.ToString(), htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-5">
                @Html.DropDownList("AccountActivityID", null, Resources.Account.Activity.ToString(), htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.AccountActivityID, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="@Resources.Common.Create.ToString()" class="btn btn-success" />
                @Html.ActionLink(Resources.Common.BackToList.ToString(), "Index", null, new { @class = "btn btn-default" })
            </div>
        </div>
    </div>
}

<script type="text/javascript">
    $(document).ready(function () {
        $('#AccountHeadID').change(function () {
            $('#AccountControlID').html('');
            $.ajax({
                url: '@Url.Action("GetAccountControls", "AccountSetting")',
                type: 'GET',
                data: { id: $(this).val() },
                dataType: 'Json',
                success: function (response) {
                    $('#AccountControlID').append("<option value='0'>Control Account</option>");
                    for (var i = 0; i < response.data.length; i++) {
                        $('#AccountControlID').append("<option value=" + response.data[i].AccountControlID + ">" + response.data[i].AccountControlName + "</option>");
                    }
                },
                error: function () { }
            });
        });
        $('#AccountControlID').change(function () {
            $('#AccountSubControlID').html('');
            $.ajax({
                url: '@Url.Action("GetSubControls", "AccountSetting")',
                type: 'GET',
                data: { id: $(this).val() },
                dataType: 'Json',
                success: function (response) {
                    $('#AccountSubControlID').append("<option value='0'>Sub Control Account</option>");
                    for (var i = 0; i < response.data.length; i++) {
                        $('#AccountSubControlID').append("<option value=" + response.data[i].AccountSubControlID + ">" + response.data[i].AccountSubControlName + "</option>");
                    }
                },
                error: function () { }
            });
        });
    });
</script>
