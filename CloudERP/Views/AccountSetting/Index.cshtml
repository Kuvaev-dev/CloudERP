@model IEnumerable<DatabaseAccess.tblAccountSetting>

@{
    ViewBag.Title = "Manage Transactions";
}

<script src="~/Scripts/jquery-3.7.1.js"></script>

<div class="card card-default col-md-12">
    <div class="card-header">
        @Html.ActionLink("Set Accounting Flow", "Create", null, new { @style = "float:left;", @class = "btn btn-success" })
        <input class="form-control col-md-3" style="float:right;" type="text" id="searchAccountSetting" name="searchAccountSetting" placeholder="Search..." />
    </div>
    <div class="card-body">
        <div class="table-responsive bootgrid">
            <table class="table table-striped table-bordered table-hover" id="dataTable">
                <thead>
                    <tr>
                        <th>
                            Activity
                        </th>
                        <th>
                            Head Account
                        </th>
                        <th>
                            Control Account
                        </th>
                        <th>
                            Sub Control
                        </th>
                        <th>
                            Actions
                        </th>
                    </tr>
                </thead>
                <tbody id="accountSettingList">
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.tblAccountActivity.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.tblAccountHead.AccountHeadName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.tblAccountControl.AccountControlName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.tblAccountSubControl.AccountSubControlName)
                            </td>
                            <td>
                                @Html.ActionLink("Edit", "Edit", new { id = item.AccountSettingID }, new { @class = "btn btn-primary" })
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
<script type="text/javascript">
    $(document).ready(function () {
        $("#searchAccountSetting").on("keyup", function () {
            var value = $(this).val().toLowerCase();
            $("#accountSettingList tr").filter(function () {
                $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
            })
        })
    })
</script>
