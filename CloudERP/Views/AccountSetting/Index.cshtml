@model IEnumerable<Domain.Models.AccountSetting>

@{
    ViewBag.Title = Localization.CloudERP.Account.SetAccountingFlow.ToString();
}

<!-- Tables Sorting-->
<link href="https://cdn.datatables.net/1.11.6/css/jquery.dataTables.min.css" rel="stylesheet" />
<script src="~/Scripts/jQuery/jquery-3.7.1.js"></script>
<script src="https://cdn.datatables.net/1.11.6/js/jquery.dataTables.min.js"></script>

<style>
    #dataTable_filter input[type="search"] {
        width: 15rem;
    }
</style>

<div class="card card-default col-md-12">
    <div class="card-header">
        @Html.ActionLink(Localization.CloudERP.Account.SetAccountingFlow.ToString(), "Create", null, new { @style = "float:left;", @class = "btn btn-success" })
        <h2 class="text-danger">@ViewBag.Message</h2>
        <h2 class="text-danger">@ViewBag.ErrorMessage</h2>
    </div>
    <div class="card-body">
        <div class="table-responsive bootgrid">
            <table class="table table-striped table-bordered table-hover" id="dataTable">
                <thead>
                    <tr>
                        <th>
                            @Html.Raw(HttpUtility.HtmlDecode(Localization.CloudERP.Account.Activity))
                        </th>
                        <th>
                            @Html.Raw(HttpUtility.HtmlDecode(Localization.CloudERP.Account.HeadAccount))
                        </th>
                        <th>
                            @Html.Raw(HttpUtility.HtmlDecode(Localization.CloudERP.Account.ControlAccount))
                        </th>
                        <th>
                            @Html.Raw(HttpUtility.HtmlDecode(Localization.CloudERP.Account.SubAccount))
                        </th>
                        <th>
                            @Html.Raw(HttpUtility.HtmlDecode(Localization.CloudERP.User.FullName))
                        </th>
                        <th>
                            @Html.Raw(HttpUtility.HtmlDecode(Localization.CloudERP.Common.Actions))
                        </th>
                    </tr>
                </thead>
                <tbody id="accountSettingList">
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.AccountActivityName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.AccountHeadName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.AccountControlName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.AccountSubControlName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.FullName)
                            </td>
                            <td>
                                @if (!item.IsGlobal || Convert.ToInt32(Session["UserTypeID"]) == 1)
                                {
                                    @Html.ActionLink(Localization.CloudERP.Common.Edit.ToString(), "Edit", new { id = item.AccountSettingID }, new { @class = "btn btn-primary" })
                                }
                                else
                                {
                                    <i class="bi bi-ban"></i>
                                    <label class="text-danger"><b>&nbsp;Not Avaliable</b></label>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
<script type="text/javascript">
    $(document).ready(function () {
        $('#dataTable').DataTable({
            "lengthMenu": [[5, 10, 25, 50, 75, 100, 150, 200, -1], [5, 10, 25, 50, 75, 100, 150, 200, "All"]],
        });
    });
</script>
