@model Domain.Models.Category

@{
    ViewBag.Title = "Category Details";
}

<div class="form-horizontal">
    <div class="form-group">
        <label class="control-label col-md-2 fw-bold">Category Name</label>
        <div class="col-md-10">
            @Html.DisplayFor(model => model.CategoryName)
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-md-2 fw-bold">Branch Name</label>
        <div class="col-md-10">
            @Html.DisplayFor(model => model.BranchName)
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-md-2 fw-bold">Company Name</label>
        <div class="col-md-10">
            @Html.DisplayFor(model => model.CompanyName)
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-md-2 fw-bold">User Name</label>
        <div class="col-md-10">
            @Html.DisplayFor(model => model.UserName)
        </div>
    </div>
</div>

<div class="btn btn-group">
    @Html.ActionLink("Edit", "Edit", null, new { id = Model.CategoryID }, new { @class = "btn btn-primary" })
    @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-default" })
</div>