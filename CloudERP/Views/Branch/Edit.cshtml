@model DatabaseAccess.tblBranch

@{
    ViewBag.Title = "Edit Branch";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/intl-tel-input/17.0.8/css/intlTelInput.css" />
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/intl-tel-input/17.0.8/js/intlTelInput.min.js"></script>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h3 class="text-danger">@ViewBag.Message</h3>
        <h3 class="text-danger">@ViewBag.ErrorMessage</h3>

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.BranchID)
        @Html.HiddenFor(model => model.BranchTypeID)
        @Html.HiddenFor(model => model.CompanyID)
        @Html.HiddenFor(model => model.BrchID)

        <div class="form-group">
            @Html.LabelFor(model => model.BranchName, "New Branch Name", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-5">
                @Html.EditorFor(model => model.BranchName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.BranchName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.BranchContact, "New Branch Contact", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-5">
                @Html.EditorFor(model => model.BranchContact, new { htmlAttributes = new { @class = "form-control", @id = "PhoneNumber" } })
                @Html.ValidationMessageFor(model => model.BranchContact, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.BranchAddress, "New Branch Address", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-5">
                @Html.EditorFor(model => model.BranchAddress, new { htmlAttributes = new { @class = "form-control", @id = "address" } })
                @Html.ValidationMessageFor(model => model.BranchAddress, "", new { @class = "text-danger" })
                <h5 class="mt-3">Click here to choose a correct address below</h5>
                <ul id="suggestions"></ul>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-success" />
                @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-default" })
            </div>
        </div>
    </div>
}
<script>
    $(document).ready(function () {
        var input = document.querySelector("#PhoneNumber");
        var iti = window.intlTelInput(input, {
            initialCountry: "@ViewBag.SelectedCountryCode",
            separateDialCode: true,
            utilsScript: "https://cdnjs.cloudflare.com/ajax/libs/intl-tel-input/17.0.8/js/utils.js"
        });

        iti.setNumber("@Model.BranchContact");

        $('form').submit(function (e) {
            var countryCode = iti.getSelectedCountryData().dialCode;
            var phoneNumber = iti.getNumber();
            if (!iti.isValidNumber()) {
                e.preventDefault();
                alert("Please enter a valid phone number.");
            } else {
                $('#PhoneNumber').val(phoneNumber);
            }
        });

        $('#address').on('input', function () {
            var query = $(this).val();
            if (query.length > 2) {
                $.ajax({
                    url: '/Address/Autocomplete',
                    data: { query: query },
                    dataType: 'json',
                    success: function (data) {
                        if (data && data.features) {
                            var suggestions = data.features;
                            $('#suggestions').empty();
                            suggestions.forEach(function (suggestion) {
                                $('#suggestions').append('<li class="suggestion-item">' + suggestion.properties.formatted + '</li>');
                            });
                        } else {
                            console.error("Unexpected JSON format:", data);
                        }
                    },
                    error: function (xhr, status, error) {
                        console.error("Error during AJAX request:", status, error);
                    }
                });
            }
        });

        $(document).on('click', '.suggestion-item', function () {
            var selectedAddress = $(this).text();
            $('#address').val(selectedAddress);
            $('#suggestions').empty();
        });
    });
</script>
