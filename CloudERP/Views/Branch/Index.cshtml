@model IEnumerable<DatabaseAccess.tblBranch>

@{
    ViewBag.Title = Resources.Branch.AllBranches.ToString();
}

<!-- Tables Sorting-->
<link href="https://cdn.datatables.net/1.11.6/css/jquery.dataTables.min.css" rel="stylesheet" />
<script src="~/Scripts/jquery-3.7.1.js"></script>
<script src="https://cdn.datatables.net/1.11.6/js/jquery.dataTables.min.js"></script>

<style>
    #dataTable_filter input[type="search"] {
        width: 15rem;
    }
</style>

<div class="card card-default col-md-12">
    <div class="card-header">
        @Html.ActionLink(Resources.Branch.AddBranch.ToString(), "Create", null, new { @style = "float:left;", @class = "btn btn-success" })
    </div>
    <div class="card-body">
        <div class="table-responsive bootgrid">
            <table class="table table-striped table-bordered table-hover" id="dataTable">
                <thead>
                    <tr>
                        <th>
                            @Html.Raw(HttpUtility.HtmlDecode(Resources.Branch.Level))
                        </th>
                        <th>
                            @Html.Raw(HttpUtility.HtmlDecode(Resources.Branch.BranchTitle))
                        </th>
                        <th>
                            @Html.Raw(HttpUtility.HtmlDecode(Resources.Branch.ContactNo))
                        </th>
                        <th>
                            @Html.Raw(HttpUtility.HtmlDecode(Resources.Branch.BranchAddress))
                        </th>
                        <th>
                            @Html.Raw(HttpUtility.HtmlDecode(Resources.Repeats.Actions))
                        </th>
                    </tr>
                </thead>
                <tbody id="branchList">
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.tblBranchType.BranchType)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.BranchName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.BranchContact)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.BranchAddress)
                            </td>
                            <td>
                                <div class="mt-2 btn-group">
                                    @Html.ActionLink(Resources.Repeats.Edit, "Edit", new { id = item.BranchID }, new { @class = "btn btn-primary" })
                                    @Html.ActionLink(Resources.Branch.Sales, "SubCustomSalesHistory", "SalePayment", new { FromDate = DateTime.Now, ToDate = DateTime.Now, id = item.BranchID }, new { @class = "btn btn-info" })
                                    @Html.ActionLink(Resources.Branch.Purchases, "SubCustomPurchasesHistory", "PurchasePayment", new { FromDate = DateTime.Now, ToDate = DateTime.Now, id = item.BranchID }, new { @class = "btn btn-info" })
                                </div>
                                <div class="mt-2 btn-group">
                                    @Html.ActionLink(Resources.Resources.Journal, "SubJournal", "GeneralTransaction", new { id = item.BranchID }, new { @class = "btn btn-info" })
                                    @Html.ActionLink(Resources.Resources.AccountsLedger, "GetSubLedger", "Ledger", new { brchid = item.BranchID.ToString() }, new { @class = "btn btn-info" })
                                </div>
                                <div class="mt-2 btn-group">
                                    @Html.ActionLink(Resources.Resources.BalanceSheet, "GetSubBalanceSheet", "BalanceSheet", new { brnchid = item.BranchID.ToString() }, new { @class = "btn btn-info" })
                                    @Html.ActionLink(Resources.Branch.IncomeStatementTitle, "GetSubIncomeStatement", "IncomeStatement", new { brchid = item.BranchID.ToString() }, new { @class = "btn btn-info" })
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
<script type="text/javascript">
    $(document).ready(function () {
        $('#dataTable').DataTable({
            "columnDefs": [{ "orderable": false, "targets": 4 }],
            "lengthMenu": [[5, 10, 25, 50, 75, 100, 150, 200, -1], [5, 10, 25, 50, 75, 100, 150, 200, "All"]],
        });
    });
</script>
