@model IEnumerable<Domain.Models.Branch>

@{
    ViewBag.Title = Localization.CloudERP.Branch.AllBranches;
}

<!-- Tables Sorting-->
<link href="https://cdn.datatables.net/1.11.6/css/jquery.dataTables.min.css" rel="stylesheet" />
<script src="https://cdn.datatables.net/1.11.6/js/jquery.dataTables.min.js"></script>

<style>
    #dataTable_filter input[type="search"] {
        width: 15rem;
    }
</style>

<div class="card card-default col-md-12">
    <div class="card-header">
        @Html.ActionLink(Localization.CloudERP.Branch.AddBranch, "Create", null, new { @style = "float:left;", @class = "btn btn-success" })
        <h3 class="text-danger">@ViewBag.Message</h3>
        <h3 class="text-danger">@ViewBag.ErrorMessage</h3>
    </div>
    <div class="card-body">
        <div class="table-responsive bootgrid">
            <table class="table table-striped table-bordered table-hover" id="dataTable">
                <thead>
                    <tr>
                        <th>
                            @Html.Raw(Localization.CloudERP.Branch.Level)
                        </th>
                        <th>
                            @Html.Raw(Localization.CloudERP.Branch.BranchName)
                        </th>
                        <th>
                            @Html.Raw(Localization.CloudERP.User.ContactNo)
                        </th>
                        <th>
                            @Html.Raw(Localization.CloudERP.User.Address)
                        </th>
                        <th>
                            @Html.Raw(Localization.CloudERP.Common.Actions)
                        </th>
                    </tr>
                </thead>
                <tbody id="branchList">
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.BranchTypeName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.BranchName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.BranchContact)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.BranchAddress)
                            </td>
                            <td>
                                <div class="mt-2 btn-group">
                                    @Html.ActionLink(Localization.CloudERP.Common.Edit, "Edit", new { id = item.BranchID }, new { @class = "btn btn-primary" })
                                    @Html.ActionLink(Localization.CloudERP.Sale.Sales, "SubCustomSalesHistory", "SalePayment", new { FromDate = DateTime.Now, ToDate = DateTime.Now, id = item.BranchID }, new { @class = "btn btn-info" })
                                    @Html.ActionLink(Localization.CloudERP.Purchase.Purchases, "SubCustomPurchasesHistory", "PurchasePayment", new { FromDate = DateTime.Now, ToDate = DateTime.Now, id = item.BranchID }, new { @class = "btn btn-info" })
                                </div>
                                <div class="mt-2 btn-group">
                                    @Html.ActionLink(Localization.CloudERP.Miscellaneous.Journal, "SubJournal", "GeneralTransaction", new { FromDate = DateTime.Now, ToDate = DateTime.Now, id = item.BranchID }, new { @class = "btn btn-info" })
                                    @Html.ActionLink(Localization.CloudERP.Miscellaneous.AccountsLedger, "GetSubLedger", "Ledger", new { id = item.BranchID }, new { @class = "btn btn-info" })
                                </div>
                                <div class="mt-2 btn-group">
                                    @Html.ActionLink(Localization.CloudERP.Miscellaneous.BalanceSheet, "GetSubBalanceSheet", "BalanceSheet", new { id = item.BranchID }, new { @class = "btn btn-info" })
                                    @Html.ActionLink(Localization.CloudERP.Miscellaneous.IncomeStatement, "GetSubIncomeStatement", "IncomeStatement", new { id = item.BranchID }, new { @class = "btn btn-info" })
                                    @Html.ActionLink(Localization.CloudERP.Miscellaneous.TrialBalance, "GetSubTrialBalance", "TrialBalance", new { id = item.BranchID }, new { @class = "btn btn-info" })
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
<script type="text/javascript">
    $(document).ready(function () {
        $('#dataTable').DataTable({
            "columnDefs": [{ "orderable": false, "targets": 4 }],
            "lengthMenu": [[5, 10, 25, 50, 75, 100, 150, 200, -1], [5, 10, 25, 50, 75, 100, 150, 200, "All"]],
        });
    });
</script>
