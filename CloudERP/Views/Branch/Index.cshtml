@model IEnumerable<DatabaseAccess.tblBranch>

@{
    ViewBag.Title = "All Branches";
}

<script src="~/Scripts/jquery-3.7.1.js"></script>

<div class="card card-default col-md-12">
    <div class="card-header">
        @Html.ActionLink("Add Branch", "Create", null, new { @style = "float:left;", @class = "btn btn-primary" })
        <input class="form-control col-md-3" style="float:right;" type="text" id="searchBranch" name="searchBranch" placeholder="Search..." />
    </div>
    <div class="card-body">
        <div class="table-responsive bootgrid">
            <table class="table table-striped table-bordered table-hover" id="dataTable">
                <thead>
                    <tr>
                        <th>
                            Level
                        </th>
                        <th>
                            Branch Title
                        </th>
                        <th>
                            Contact №
                        </th>
                        <th>
                            Branch Address
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody id="branchList">
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.tblBranchType.BranchType)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.BranchName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.BranchContact)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.BranchAddress)
                            </td>
                            <td>
                                @Html.ActionLink("Edit", "Edit", new { id = item.BranchID }, new { @class="btn btn-primary" })
                                @Html.ActionLink("Details", "Details", new { id = item.BranchID }, new { @class = "btn btn-info" })
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
<script type="text/javascript">
    $(document).ready(function () {
        $("#searchBranch").on("keyup", function () {
            var value = $(this).val().toLowerCase();
            $("#branchList tr").filter(function () {
                $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
            })
        })
    })
</script>
