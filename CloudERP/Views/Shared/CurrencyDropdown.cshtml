@model Dictionary<string, double>

<div class="form-group">
    @Html.Label("Currency", "Currency", new { @class = "control-label" })
    <div>
        <select name="SelectedCurrency" class="form-control">
            @if (Model != null && Model.Any())
            {
                foreach (var rate in Model)
                {
                    <option value="@rate.Key" @(rate.Key == ViewBag.SelectedCurrency ? "selected" : "")>
                        @rate.Key
                    </option>
                }
            }
            else
            {
                <option disabled>No currencies available</option>
            }
        </select>
    </div>
</div>