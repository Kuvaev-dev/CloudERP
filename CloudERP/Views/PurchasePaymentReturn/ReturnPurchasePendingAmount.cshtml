@model IEnumerable<DatabaseAccess.Models.SupplierReturnInvoiceModel>

@{
    ViewBag.Title = "Return Purchase`s Payment Pending";
}

<script src="~/Scripts/jquery-3.7.1.js"></script>

<div class="card card-default col-md-12">
    <div class="card-header">
        <h3 class="text-danger">@ViewBag.ErrorMessage</h3>
        <h5 style="float:left;">@Session["Message"]</h5>
        <input class="form-control col-md-3" style="float:right;" type="text" id="searchPayment" name="searchPayment" placeholder="Search..." />
    </div>
    <div class="card-body">
        <div class="table-responsive bootgrid">
            <table class="table table-striped table-bordered table-hover" id="dataTable">
                <thead>
                    <tr>
                        <th>
                            Supplier
                        </th>
                        <th>
                            Invoice №
                        </th>
                        <th>
                            Invoice Date
                        </th>
                        <th>
                            Return (Total Amount)
                        </th>
                        <th>
                            Return (Payment Amount)
                        </th>
                        <th>
                            Remaining Balance
                        </th>
                    </tr>
                </thead>
                <tbody id="paymentList">
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.ActionLink(item.SupplierName, "SupplierDetails", "Supplier", new { id = item.SupplierID }, null)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.InvoiceNo)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.InvoiceDate)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ReturnTotalAmount)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ReturnPaymentAmount)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.RemainingBalance)
                            </td>
                            <td>
                                @{
                                    if (item.ReturnTotalAmount - 1 > item.ReturnPaymentAmount)
                                    {
                                        Html.ActionLink("Return Payment", "ReturnAmount", new { id = item.SupplierReturnInvoiceID }, new { @class = "btn btn-primary" });
                                    }
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
<script type="text/javascript">
    $(document).ready(function () {
        $("#searchPayment").on("keyup", function () {
            var value = $(this).val().toLowerCase();
            $("#paymentList tr").filter(function () {
                $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
            })
        })
    })
</script>