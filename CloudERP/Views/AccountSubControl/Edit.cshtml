@model DatabaseAccess.tblAccountSubControl

@{
    ViewBag.Title = Resources.AccountSubControl.EditSubControl.ToString();
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h3 class="text-danger">@ViewBag.Message</h3>
        <h3 class="text-danger">@ViewBag.ErrorMessage</h3>

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.AccountSubControlID)
        @Html.HiddenFor(model => model.CompanyID)
        @Html.HiddenFor(model => model.BranchID)

        <div class="form-group">
            @Html.LabelFor(model => model.AccountControlID, Resources.AccountSubControl.SelectControlAccount.ToString(), htmlAttributes: new { @class = "control-label col-md-4" })
            <div class="col-md-5">
                @Html.DropDownList("AccountControlID", null, "Account Control", htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.AccountControlID, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.AccountSubControlName, Resources.AccountSubControl.NewAccountSubControlName.ToString(), htmlAttributes: new { @class = "control-label col-md-4" })
            <div class="col-md-5">
                @Html.EditorFor(model => model.AccountSubControlName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.AccountSubControlName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="@Resources.Repeats.Save.ToString()" class="btn btn-success" />
                @Html.ActionLink(Resources.Repeats.BackToList.ToString(), "Index", null, new { @class = "btn btn-default" })
            </div>
        </div>
    </div>
}
