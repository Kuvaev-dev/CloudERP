@model IEnumerable<Domain.Models.PurchaseCartDetail>

@{
    ViewBag.Title = Resources.Purchase.Purchasing.ToString();
    var products = ViewBag.Products as IEnumerable<Domain.Models.Stock>;
}

<script src="~/Scripts/jQuery/jquery-3.7.1.js"></script>


@using (Html.BeginForm("AddItem", "PurchaseCart", FormMethod.Post, null))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h3 class="text-danger">@ViewBag.ErrorMessage</h3>

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            <label class="control-label col-md-2">@Html.Raw(HttpUtility.HtmlDecode(Resources.Purchase.SelectProduct))</label>
            <div class="col-md-5">
                <select class="form-control" id="PID" name="PID" required>
                    <option value="">@Resources.Purchase.SelectProduct.ToString()</option>
                    @foreach (var product in products)
                    {
                        <option value="@product.ProductID">@product.ProductName (QTY: @product.Quantity)</option>
                    }
                </select>
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">@Resources.Purchase.Quantity.ToString()</label>
            <div class="col-md-5">
                <input type="number" class="form-control" id="Qty" name="Qty" placeholder="Enter Purchase Quantity..." required />
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">@Resources.Purchase.UnitPrice.ToString()</label>
            <div class="col-md-5">
                <input type="number" class="form-control" id="Price" step=".01" name="Price" placeholder="Enter Unit Price..." required />
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">@Html.Raw(HttpUtility.HtmlDecode(Resources.Purchase.ItemCost))</label>
            <div class="col-md-5">
                <input type="text" readonly class="form-control" id="selectItemCost" name="selectItemCost" />
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="@Resources.Purchase.AddItem.ToString()" class="btn btn-success" />
            </div>
        </div>
    </div>
}

<div class="card card-default col-md-12">
    <div class="card-header">
        <h3 class="text-bold">@Resources.Purchase.ItemsList.ToString()</h3>
        <h4 class="text-success">
            @{
                if (ViewBag.Message != null) 
                {
                    @ViewBag.Message;           
                } 
                else 
                {
                    @Session["ErrorMessagePurchase"];              
                } 
            }
        </h4>
    </div>
    <div class="card-body">
        <div class="table-responsive bootgrid">
            <table class="table table-striped table-hover" id="dataTable">
                <thead style="background-color:lightgray;">
                    <tr>
                        <th>
                            @Resources.Purchase.Items.ToString()
                        </th>
                        <th>
                            @Resources.Purchase.Quantity.ToString()
                        </th>
                        <th>
                            @Resources.Purchase.UnitPrice.ToString()
                        </th>
                        <th>
                            @Resources.Purchase.ItemCost.ToString()
                        </th>
                        <th>
                            @Resources.Purchase.User.ToString()
                        </th>
                        <th>
                            @Resources.Common.Actions.ToString()
                        </th>
                    </tr>
                </thead>
                <tbody id="purchaseList">
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.ProductName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.PurchaseQuantity)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.PurchaseUnitPrice)
                            </td>
                            <td>
                                @(string.Format("{0:0.000}", Math.Truncate(item.PurchaseQuantity * item.PurchaseUnitPrice * 10) / 10))
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.UserName)
                            </td>
                            <td>
                                @using (Html.BeginForm("DeleteConfirm", "PurchaseCart", FormMethod.Post))
                                {
                                    @Html.AntiForgeryToken()
                                    @Html.Hidden("id", item.PurchaseCartDetailID)
                                    <input type="submit" value="@Resources.Common.Delete" class="btn btn-danger" />
                                }
                            </td>
                        </tr>
                    }
                </tbody>
                <tfoot>
                    <tr>
                        <td></td>
                        <td></td>
                        <td></td>
                        <td style="background-color:black; color:white;">@Resources.Purchase.TotalPurchaseAmount.ToString()</td>
                        <td style="background-color:black; color:white;">
                            @(string.Format("{0:0.000}", Math.Truncate(ViewBag.TotalAmount * 10) / 10)) @Resources.Common.UAH.ToString()
                        </td>
                    </tr>
                </tfoot>
            </table>
            <div style="float:right; margin-top:20px;">
                @Html.ActionLink(Resources.Purchase.Next.ToString(), "SelectSupplier", null, new { @class = "btn btn-success", style="padding:20px;" })
                @Html.ActionLink(Resources.Purchase.Cancel.ToString(), "CancelPurchase", null, new { @class = "btn btn-danger", style = "padding:20px;" })
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
    $(document).ready(function () {
        $('#dataTable').DataTable({
            "columnDefs": [{ "orderable": false, "targets": 5 }],
            "lengthMenu": [[5, 10, 25, 50, 75, 100, 150, 200, -1], [5, 10, 25, 50, 75, 100, 150, 200, "All"]],
        });

        $.ajax({
            url: '@Url.Action("GetProduct", "PurchaseCart")',
            type: 'GET',
            data: "{}",
            dataType: 'Json',
            success: function (response) {
                for (var i = 0; i < response.data.length; i++) {
                    $('#PID').append("<option value=" + response.data[i].ProductID + ">" + response.data[i].Name + "</option>");
                }
            },
            error: function () { }
        });

        $('#PID').change(function () {
            var productId = $(this).val();
            if (productId) {
                $.ajax({
                    url: '@Url.Action("GetProductDetails", "PurchaseCart")',
                    type: 'GET',
                    data: { id: productId },
                    success: function (response) {
                        $('#Price').val(response.CurrentPurchaseUnitPrice);
                    },
                    error: function () {
                        alert('Error fetching product price');
                    }
                });
            } else {
                $('#Price').val('');
            }
        });

        $("#Qty, #Price").on("input", function () {
            var unitPrice = parseFloat($("#Price").val()) || 0;
            var qty = parseFloat($("#Qty").val()) || 0;
            $("#selectItemCost").val((unitPrice * qty).toFixed(2));
        });
    });
</script>