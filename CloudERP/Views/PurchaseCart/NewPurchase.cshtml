@model IEnumerable<DatabaseAccess.tblPurchaseCartDetail>

@{
    ViewBag.Title = "Purchasing";
    var products = ViewBag.Products as List<DatabaseAccess.tblStock>;
}

<script src="~/Scripts/jquery-3.7.1.js"></script>


@using (Html.BeginForm("AddItem", "PurchaseCart", FormMethod.Post, null))
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="form-group">
        <label class="control-label col-md-2">@Html.Raw(HttpUtility.HtmlDecode(Resources.SaleCart.SelectProduct))</label>
        <div class="col-md-5">
            <select class="form-control" id="PID" name="PID" required>
                <option value="">Select Product</option>
                @foreach (var product in products)
                {
                    <option value="@product.ProductID">@product.ProductName</option>
                }
            </select>
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2">Quantity</label>
        <div class="col-md-5">
            <input type="number" class="form-control" id="Qty" name="Qty" placeholder="Enter Purchase Quantity..." required />
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2">Unit Price</label>
        <div class="col-md-5">
            <input type="number" class="form-control" id="Price" step=".01" name="Price" placeholder="Enter Unit Price..." required />
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Add Item" class="btn btn-success" />
        </div>
    </div>
</div>
}

<div class="card card-default col-md-12">
    <div class="card-header">
        <h3 class="text-bold">Items List</h3>
        <h4 class="text-success">
            @{
                if (ViewBag.Message != null) 
                {
                    @ViewBag.Message;           
                } 
                else 
                {
                    @Session["ErrorMessagePurchase"];              
                } 
            }
        </h4>
        <input class="form-control col-md-3" style="float:right;" type="text" id="searchPurchase" name="searchPurchase" placeholder="Search..." />
    </div>
    <div class="card-body">
        <div class="table-responsive bootgrid">
            <table class="table table-striped table-hover" id="dataTable">
                <thead style="background-color:lightgray;">
                    <tr>
                        <th>
                            Item`s
                        </th>
                        <th>
                            Quantity
                        </th>
                        <th>
                            Unit Price
                        </th>
                        <th>
                            Item Cost
                        </th>
                        <th>
                            User
                        </th>
                        <th>
                            Actions
                        </th>
                    </tr>
                </thead>
                <tbody id="purchaseList">
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.tblStock.ProductName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.PurchaseQuantity)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.PurchaseUnitPrice)
                            </td>
                            <td>
                                @(string.Format("{0:0.000}", Math.Truncate(item.PurchaseQuantity * item.PurchaseUnitPrice * 10) / 10))
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.tblUser.UserName)
                            </td>
                            <td>
                                @Html.ActionLink("Delete", "DeleteConfirm", new { id = item.PurchaseCartDetailID }, new { @class = "btn btn-danger" })
                            </td>
                        </tr>
                    }
                </tbody>
                <tfoot>
                    <tr>
                        <td></td>
                        <td></td>
                        <td></td>
                        <td style="background-color:black; color:white;">Total Purchase Amount</td>
                        <td style="background-color:black; color:white;">
                            @(string.Format("{0:0.000}", Math.Truncate(ViewBag.TotalAmount * 10) / 10)) UAH
                        </td>
                    </tr>
                </tfoot>
            </table>
            <div style="float:right; margin-top:20px;">
                @Html.ActionLink("Next", "SelectSupplier", null, new { @class = "btn btn-success", style="padding:20px;" })
                @Html.ActionLink("Cancel", "CancelPurchase", null, new { @class = "btn btn-danger", style = "padding:20px;" })
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
    $(document).ready(function () {
        $("#searchPurchase").on("keyup", function () {
            var value = $(this).val().toLowerCase();
            $("#purchaseList tr").filter(function () {
                $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
            })
        })

        $.ajax({
            url: '@Url.Action("GetProduct", "PurchaseCart")',
            type: 'GET',
            data: "{}",
            dataType: 'Json',
            success: function (response) {
                for (var i = 0; i < response.data.length; i++) {
                    $('#PID').append("<option value=" + response.data[i].ProductID + ">" + response.data[i].Name + "</option>");
                }
            },
            error: function () { }
        });

        $('#PID').change(function () {
            var productId = $(this).val();
            if (productId) {
                $.ajax({
                    url: '@Url.Action("GetProductDetails", "PurchaseCart")',
                    type: 'GET',
                    data: { id: productId },
                    success: function (response) {
                        $('#Price').val(response.CurrentPurchaseUnitPrice);
                    },
                    error: function () {
                        alert('Error fetching product price');
                    }
                });
            } else {
                $('#Price').val('');
            }
        });
    });
</script>