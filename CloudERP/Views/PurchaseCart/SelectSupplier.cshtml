@model IEnumerable<Domain.Models.Supplier>

@{
    ViewBag.Title = "Finilize Purchasing";
}

<!-- Tables Sorting-->
<link href="https://cdn.datatables.net/1.11.6/css/jquery.dataTables.min.css" rel="stylesheet" />
<script src="~/Scripts/jQuery/jquery-3.7.1.js"></script>
<script src="https://cdn.datatables.net/1.11.6/js/jquery.dataTables.min.js"></script>

<style>
    #dataTable_filter input[type="search"] {
        width: 15rem;
    }
</style>

@using (Html.BeginForm("PurchaseConfirm", "PurchaseCart", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Purchase Details</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <h3 class="text-danger">@ViewBag.Message</h3>
        <h3 class="text-danger">@ViewBag.ErrorMessage</h3>

        <div class="form-group">
            <label class="control-label col-md-2">Purchase Description</label>
            <div class="col-md-12">
                <input type="text" class="form-control" id="item.Description" name="item.Description" placeholder="Enter Purchase Description..." required />
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-4">Is Purchase Payment Paid</label>
            <div class="col-md-12">
                <input type="checkbox" name="IsPayment" />
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">

            </div>
        </div>
    </div>

    <div class="card card-default col-md-12">
        <div class="card-header">
            <input type="submit" style="float:right;" value="Finilize Purchase" class="btn btn-success" />
        </div>
        <div class="card-body">
            <div class="table-responsive bootgrid">
                <table class="table table-striped table-hover" id="dataTable">
                    <thead style="background-color:lightgray;">
                        <tr>
                            <th>
                                Supplier
                            </th>
                            <th>
                                Conatct No
                            </th>
                            <th>
                                Email
                            </th>
                            <th>
                                @Resources.Common.Actions.ToString()
                            </th>
                        </tr>
                    </thead>
                    <tbody id="supplierList">
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.SupplierName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.SupplierConatctNo)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.SupplierEmail)
                                </td>
                                <td>
                                    <input type="checkbox" name="name @item.SupplierID" class="chb" />
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
}

<script type="text/javascript">
    $(document).ready(function () {
        $('#dataTable').DataTable({
            "columnDefs": [{ "orderable": false, "targets": [1, 2] }],
            "lengthMenu": [[5, 10, 25, 50, 75, 100, 150, 200, -1], [5, 10, 25, 50, 75, 100, 150, 200, "All"]],
        });

        $(".chb").change(function (event) {
            $(".chb").prop('checked', false);
            $(this).prop('checked', true);
        });
    });
</script>
