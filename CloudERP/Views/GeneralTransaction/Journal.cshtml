@model IEnumerable<DatabaseAccess.Models.JournalModel>

@{
    ViewBag.Title = "Journal (By Transaction`s Date";
}

<script src="~/Scripts/jquery-3.7.1.js"></script>

<div class="card">
    <div class="card card-float">
        <div class="card-header">
            <h4>Select Range (From Date and To Date)</h4>
            <h5 class="table-danger">@ViewBag.JournalMessage</h5>
        </div>
        <div class="card-body">
            @using (Html.BeginForm("Journal", "GeneralTransaction", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                <div class="row">
                    <div class="col-md-4">
                        <label>Select From Date</label>
                        <input type="date" id="FromDate" name="FromDate" value="@DateTime.Now" class="form-control" required>
                    </div>
                    <div class="col-md-4">
                        <label>Select To Date</label>
                        <input type="date" id="ToDate" name="ToDate" value="@DateTime.Now" class="form-control" required>
                    </div>
                </div>
                <br />
                <br />
                <input type="submit" value="Retrive Transactions" class="btn btn-success" style="float: right;">
            }
        </div>
    </div>
</div>

<div class="card card-default col-md-12">
    <div class="card-header">
        <input class="form-control col-md-3" style="float:right;" type="text" id="searchCategory" name="searchCategory" placeholder="Search..." />
    </div>
    <div class="card-body">
        <div class="table-responsive bootgrid">
            <table class="table table-striped table-bordered table-hover" id="dataTable">
                <thead>
                    <tr>
                        <th>
                            Date
                        </th>
                        <th>
                            Account
                        </th>
                        <th>
                            Title
                        </th>
                        <th>
                            Invoice №
                        </th>
                        <th>
                            Debit
                        </th>
                        <th>
                            Credit
                        </th>
                    </tr>
                </thead>
                <tbody id="categoriesList">
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.TransectionDate)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.AccountSubControl)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.TransectionTitle)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.InvoiceNo)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Debit)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Credit)
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
<script type="text/javascript">
    $(document).ready(function () {
        $("#searchCategory").on("keyup", function () {
            var value = $(this).val().toLowerCase();
            $("#categoriesList tr").filter(function () {
                $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
            })
        })
    })
</script>