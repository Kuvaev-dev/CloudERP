@model IEnumerable<DatabaseAccess.Models.JournalModel>

@{
    string invoiceNo = string.Empty;
    ViewBag.Title = Resources.Miscellaneous.JournalByTransactionsDate;
}

<!-- Tables Sorting-->
<link href="https://cdn.datatables.net/1.11.6/css/jquery.dataTables.min.css" rel="stylesheet" />
<script src="~/Scripts/jquery-3.7.1.js"></script>
<script src="https://cdn.datatables.net/1.11.6/js/jquery.dataTables.min.js"></script>

<style>
    #dataTable_filter input[type="search"] {
        width: 15rem;
    }
</style>

<div class="card">
    <div class="card card-float">
        <div class="card-header">
            <h4>@Resources.Miscellaneous.SelectRangeFromDateAndToDate</h4>
            <h5 class="text-danger">@ViewBag.JournalMessage</h5>
            <h3 class="text-danger">@ViewBag.Message</h3>
            <h3 class="text-danger">@ViewBag.ErrorMessage</h3>
        </div>
        <div class="card-body">
            @using (Html.BeginForm("Journal", "GeneralTransaction", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                <div class="row">
                    <div class="col-md-4">
                        <label>@Resources.Miscellaneous.SelectFromDate</label>
                        <input type="date" id="FromDate" name="FromDate" value="@DateTime.Now" class="form-control" required>
                    </div>
                    <div class="col-md-4">
                        <label>@Resources.Miscellaneous.SelectToDate</label>
                        <input type="date" id="ToDate" name="ToDate" value="@DateTime.Now" class="form-control" required>
                    </div>
                </div>
                <br />
                <hr />
                <input type="submit" value="@Resources.Miscellaneous.RetriveTransactions" class="btn btn-success" style="float: right;">
            }
        </div>
    </div>
</div>

<div class="card">
    <div class="card-header">
        <div class="card-title">@Resources.Miscellaneous.Export</div>
        <div class="text-sm">
            @Resources.Miscellaneous.Transactions
        </div>
    </div>
    <div class="card-body">
        <table class="table my-4 w-100" id="datatable2">
            <thead>
                <tr>
                    <th>
                        №
                    </th>
                    <th>
                        @Resources.Miscellaneous.Date
                    </th>
                    <th>
                        @Resources.Miscellaneous.Account
                    </th>
                    <th>
                        @Resources.Miscellaneous.Title
                    </th>
                    <th>
                        @Resources.Miscellaneous.InvoiceNo
                    </th>
                    <th>
                        @Resources.Miscellaneous.Debit
                    </th>
                    <th>
                        @Resources.Miscellaneous.Credit
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    if (invoiceNo != item.InvoiceNo)
                    {
                        <tr style="background-color:aliceblue">
                            <td>
                                @Html.DisplayFor(modelItem => item.SNO)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.TransectionDate)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.AccountSubControl)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.TransectionTitle)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.InvoiceNo)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Debit)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Credit)
                            </td>
                        </tr>
                    }
                    else
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.SNO)
                            </td>
                            <td>
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.AccountSubControl)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.TransectionTitle)
                            </td>
                            <td>
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Debit)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Credit)
                            </td>
                        </tr>
                    }
                    invoiceNo = item.InvoiceNo;
                }
            </tbody>
        </table>
    </div>
</div>
<script type="text/javascript">
    $(document).ready(function () {
        $('#dataTable').DataTable({
            "columnDefs": [{ "orderable": false, "targets": 1 }],
            "lengthMenu": [[5, 10, 25, 50, 75, 100, 150, 200, -1], [5, 10, 25, 50, 75, 100, 150, 200, "All"]],
        });
    });
</script>