@model IEnumerable<Domain.Models.FinancialModels.AccountLedgerModel>
@{
    ViewBag.Title = Localization.CloudERP.Miscellaneous.SubBranchAccountsLedger;
}

<script src="https://code.jquery.com/jquery-3.7.0.min.js"></script>
<link href="https://cdn.datatables.net/buttons/2.4.2/css/buttons.dataTables.min.css" rel="stylesheet">
<script src="https://cdn.datatables.net/buttons/2.4.2/js/dataTables.buttons.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jszip/3.1.3/jszip.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.53/pdfmake.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.53/vfs_fonts.js"></script>
<script src="https://cdn.datatables.net/buttons/2.4.2/js/buttons.html5.min.js"></script>
<script src="https://cdn.datatables.net/buttons/2.4.2/js/buttons.print.min.js"></script>

@using (Html.BeginForm("GetSubLedger", "Ledger", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <div class="card">
        <div class="card card-float">
            <div class="card-body">
                <div class="row">
                    <div class="col-md-4">
                        <label>@Localization.CloudERP.Miscellaneous.SelectFinancialYear</label>
                        @Html.DropDownList("id", (SelectList)ViewBag.FinancialYears, Localization.CloudERP.Miscellaneous.SelectFinancialYear, new { @class = "form-control", required = "required" })
                        <input type="submit" value="@Localization.CloudERP.Miscellaneous.RetrieveLedger" class="btn btn-success form-control mt-2">
                    </div>
                    <div class="col-md-4">
                        <h3 class="text-danger">@ViewBag.Message</h3>
                        <h3 class="text-danger">@ViewBag.ErrorMessage</h3>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

<div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h3 class="text-primary">@Localization.CloudERP.Miscellaneous.AccountsLedger</h3>
        <p>@Localization.CloudERP.Miscellaneous.Export</p>
    </div>
    <div class="card-body">
        <table class="table my-4 w-100" id="dataTable">
            <thead>
                <tr>
                    <th style="display:none;">
                        %
                    </th>
                    <th>
                        @Localization.CloudERP.Miscellaneous.Account
                    </th>
                    <th>
                        @Localization.CloudERP.Miscellaneous.Date
                    </th>
                    <th>
                        @Localization.CloudERP.Company.Description
                    </th>
                    <th>
                        @Localization.CloudERP.Miscellaneous.Debit
                    </th>
                    <th>
                        @Localization.CloudERP.Miscellaneous.Credit
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    if (item.Date == "Date")
                    {
                        <tr style="background-color:lightgray">
                            <td style="display:none;">
                                @Html.DisplayFor(modelItem => item.SNo)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Account)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Date)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Description)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Debit)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Credit)
                            </td>
                        </tr>
                    }
                    else
                    {
                        <tr>
                            <td style="display:none;">
                                @Html.DisplayFor(modelItem => item.SNo)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Account)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Date)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Description)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Debit)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Credit)
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>

<script type="text/javascript">
    $(document).ready(function () {
        $('#dataTable').DataTable({
            "dom": 'Bfrtip',
            "buttons": [
                'copy',
                'csv',
                'excel',
                'pdf',
                'print'
            ],
            "columnDefs": [{ "orderable": false, "targets": 1 }],
            "lengthMenu": [[5, 10, 25, 50, 75, 100, 150, 200, -1], [5, 10, 25, 50, 75, 100, 150, 200, "All"]],
        });
    });
</script>
