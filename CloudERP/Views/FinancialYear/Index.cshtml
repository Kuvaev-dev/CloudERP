@model IEnumerable<Domain.Models.FinancialYear>

@{
    ViewBag.Title = Resources.Miscellaneous.AllFinancialYears.ToString();
}

<!-- Tables Sorting-->
<link href="https://cdn.datatables.net/1.11.6/css/jquery.dataTables.min.css" rel="stylesheet" />
<script src="~/Scripts/jquery-3.7.1.js"></script>
<script src="https://cdn.datatables.net/1.11.6/js/jquery.dataTables.min.js"></script>

<style>
    #dataTable_filter input[type="search"] {
        width: 15rem;
    }
</style>

<div class="card card-default col-md-12">
    <div class="card-header">
        @Html.ActionLink(Resources.Financial.AddFinancialYear.ToString(), "Create", null, new { @style = "float:left;", @class = "btn btn-success" })
        <h3 class="text-danger">@ViewBag.Message</h3>
        <h3 class="text-danger">@ViewBag.ErrorMessage</h3>
    </div>
    <div class="card-body">
        <div class="table-responsive bootgrid">
            <table class="table table-striped table-bordered table-hover" id="dataTable">
                <thead>
                    <tr>
                        <th>
                            @Html.Raw(HttpUtility.HtmlDecode(Resources.Financial.FinancialYearTitle))
                        </th>
                        <th>
                            @Html.Raw(HttpUtility.HtmlDecode(Resources.Financial.StartDate))
                        </th>
                        <th>
                            @Html.Raw(HttpUtility.HtmlDecode(Resources.Financial.EndDate))
                        </th>
                        <th>
                            @Html.Raw(HttpUtility.HtmlDecode(Resources.Financial.Status))
                        </th>
                        <th>
                            @Html.Raw(HttpUtility.HtmlDecode(Resources.Miscellaneous.User))
                        </th>
                        <th>
                            @Html.Raw(HttpUtility.HtmlDecode(Resources.Common.Actions))
                        </th>
                    </tr>
                </thead>
                <tbody id="financialYearList">
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.FinancialYear)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.StartDate)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.EndDate)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.IsActive)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.tblUser.FullName)
                            </td>
                            <td>
                                @Html.ActionLink(Resources.Common.Edit.ToString(), "Edit", new { id = item.FinancialYearID }, new { @class = "btn btn-primary" })
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
<script type="text/javascript">
    $(document).ready(function () {
        $('#dataTable').DataTable({
            "columnDefs": [{ "orderable": false, "targets": 5 }],
            "lengthMenu": [[5, 10, 25, 50, 75, 100, 150, 200, -1], [5, 10, 25, 50, 75, 100, 150, 200, "All"]],
        });
    });
</script>